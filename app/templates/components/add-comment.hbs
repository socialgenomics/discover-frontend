<img src={{avatar}} class="u-w1 u-mr1 u-circle" />
<div class="u-grow-1">
  {{validated-input
    type="textarea"
    value=comment
    placeholder=placeholder
    showCommentButtons=(action 'showButtons')
    disabled=disabled
  }}
  {{#if allowComment}}
    <div class="u-mb2">
      <button {{action 'addComment'}} class="c-btn c-btn-primary u-mr2">Comment</button>
      <a {{action 'cancel'}} class="c-btn-text-secondary">Cancel</a>
    </div>
  {{/if}}
</div>
