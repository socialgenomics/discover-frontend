<img src={{avatar}} class="u-w1 u-mr1 u-circle" />
<div class="u-grow-1">
  {{validated-input
    type="textarea"
    value=comment
    placeholder=placeholder
    showCommentButtons=(action 'showButtons')
    disabled=disabled
  }}
  {{#if allowComment}}
    <div class="u-mb2">
      {{rui/r-button variant="primary" size="big" label="Comment" clickHandler=(action "addComment")}}
      {{rui/r-button variant="cancel" size="big" label="Cancel" clickHandler=(action "cancel")}}
    </div>
  {{/if}}
</div>
