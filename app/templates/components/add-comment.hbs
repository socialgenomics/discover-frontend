
<div class="dp-wrapper">
  <img src={{avatar}}>
</div>
<div class="input-field">
  {{validated-input
    type="textarea"
    value=comment
    placeholder="Share your thoughts or ask more questions about the data."
    action="showButtons"
    textarea="true"
  }}
  {{#if isActive}}
    <div class="buttons">
      <button {{action 'addComment'}} class="btn post-btn teal white-text">{{fa-icon "check"}}</button>
      <a {{action 'cancel'}} class="cancel-btn">cancel</a>
    </div>
  {{/if}}
</div>
