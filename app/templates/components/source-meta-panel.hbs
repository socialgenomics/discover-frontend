<section class="metadata-panel source-panel">
  <header>
    {{#link-to 'datasources' class="left-align"}}
      {{fa-icon "chevron-left"}}
    {{/link-to}}
    <img src="/assets/images/icons/icon-datasource-white@2x.png" class="data-icon">
    <h5>Data Source</h5>
  </header>

  <!-- <ul class="tabs">
    <a {{action "showInfo"}}>
      <li class="tab {{if displayInfo "active-tab"}}"><h5>More Information</h5></li>
    </a>
    <a {{action "showFilters"}}>
      <li class="tab {{unless displayInfo "active-tab"}}"><h5>Filters</h5></li>
    </a>
  </ul> -->

  {{#if displayInfo}}
    <main>
      {{#if model.name}}
        <h3>{{model.name}}</h3>
      {{else}}
        <h3>{{model.properties.short_name}}</h3>
      {{/if}}
      <span class="helper-text">created by </span>
      <span>{{#link-to 'user' model.owner.id}}Repositive{{/link-to}}</span>

      <div class="divider"></div>

      <!-- TODO turn these into components -->
      <section class="stats-numbers">
        <div class="stats-number">
          <span class="data-num">{{model.sourcesNo}} 125</span>
          <p>Sources</p>
        </div>

        <div class="stats-number">
          {{#if (eq model.access "open")}}
            <span class="data-num">{{fa-icon "globe"}}</span>
            <p>Open Access</p>
          {{else if (eq model.access "restricted")}}
            <span class="data-num">{{fa-icon "lock"}}</span>
            <p>Restricted</p>
          {{else}}
            <span class="data-num">{{fa-icon "globe"}}</span>
            <p>Open Access</p>
          {{/if}}
        </div>

        <!-- <div class="stats-number">
          <span class="data-num">{{fa-icon "map-marker"}}</span>
          <p>China</p>
        </div> -->
      </section>

      {{#if model.description}}
        <div class="divider"></div>
        <p>{{model.description}}</p>
      {{/if}}

      {{#if model.image}}
        <div class="divider"></div>
        <img src="{{model.image}}" class="logo-img">
      {{/if}}
    </main>

  {{else}}
    {{meta-panel-filters}}
  {{/if}}
</section>
