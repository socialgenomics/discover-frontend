<section class="metadata-panel source-panel">
  <header>
    {{#link-to 'datasources' class="left-align" invokeAction=(action 'trackBackClick')}}
      <div class="back-arrow center-align" data-balloon="See all data sources" data-balloon-pos="right" data-balloon-length="medium">
        {{fa-icon "chevron-left"}}
      </div>
    {{/link-to}}
    <img src="/assets/images/icons/icon-datasource-white@2x.png" class="data-icon">
    <h5>Data Source</h5>
  </header>

  <!-- <ul class="tabs">
    <a {{action "showInfo"}}>
      <li class="tab {{if displayInfo "active-tab"}}"><h5>More Information</h5></li>
    </a>
    <a {{action "showFilters"}}>
      <li class="tab {{unless displayInfo "active-tab"}}"><h5>Filters</h5></li>
    </a>
  </ul> -->

  {{#if displayInfo}}
    <main>
      <h3>{{source-name-fallback model=model}}</h3>
      {{#unless (eq model.type 'datasource')}}
        {{collection-created-by user=model.userId type=model.type}}
      {{/unless}}

      <div class="divider"></div>

      <section class="stats-numbers">
        {{stats-number-ring stat=collectionStats.datasets label="Datasets"}}
        {{#if model.properties.access}}
          {{stats-number-ring stat=model.properties.access}}
        {{/if}}
      </section>

      {{#if model.description}}
        <div class="divider"></div>
        <p class="markdown-text">{{markdown-to-html markdown=model.description}}</p>
      {{/if}}

      {{#if model.image}}
        <div class="divider"></div>
        <img src="{{model.image}}" class="logo-img">
      {{/if}}
    </main>

  {{else}}
    {{meta-panel-filters}}
  {{/if}}
</section>
