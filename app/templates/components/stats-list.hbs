{{#if (eq access "Open")}}
  <li class="o-list-inline__item" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-globe u-tc-green"></i>
    <span class="u-tc-green">
      {{access}}
    </span>
  </li>
{{/if}}

{{#if (eq access "Restricted")}}
  <li class="o-list-inline__item" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-lock u-tc-red"></i>
    <span class="u-tc-red">
      {{access}}
    </span>
  </li>
{{/if}}

{{#if (or (eq statType "collection") (eq statType "datasource"))}}
  <li class="o-list-inline__item" data-balloon="Datasets" data-balloon-pos="down">
    {{fa-icon "file-text"}}
    <span>
      {{#if stats.datasets}}
        {{rough-estimate stats.datasets}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

{{#if (eq statType "collection")}}
  <li class="o-list-inline__item" data-balloon="Sources" data-balloon-pos="down">
    {{fa-icon "database"}}
    <span>
      {{#if stats.datasources}}
        {{rough-estimate stats.datasources}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

<!-- Each of these can be a stats-list-item -->
