{{#if (eq access "Open")}}
  <li class="access-icons center-align" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-globe color-fruit-salad-text"></i>
    <span class="color-fruit-salad-text">
      {{access}}
    </span>
  </li>
{{/if}}

{{#if (eq access "Restricted")}}
  <li class="access-icons center-align" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-lock color-red-error-text"></i>
    <span class="color-red-error-text">
      {{access}}
    </span>
  </li>
{{/if}}

{{#if (or (eq statType "collection") (eq statType "datasource"))}}
  <li class="center-align" data-balloon="Datasets" data-balloon-pos="down">
    {{fa-icon "file-text"}}
    <span>
      {{#if stats.datasets}}
        {{rough-estimate stats.datasets}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

{{#if (eq statType "collection")}}
  <li class="center-align" data-balloon="Sources" data-balloon-pos="down">
    <img src="/assets/images/icons/icon-datasource-white@2x.png" class="data-icon">
    <span>
      {{#if stats.datasources}}
        {{rough-estimate stats.datasources}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

<!-- Each of these can be a stats-list-item -->
<li class="center-align" data-balloon="Views" data-balloon-pos="down">
  {{fa-icon "eye"}}
  <span>
    {{#if stats.view}}
      {{rough-estimate stats.view}}
    {{else}}
      0
    {{/if}}
  </span>
</li>

{{#if (eq statType "datasets")}}
  <li class="center-align" data-balloon="Discussion" data-balloon-pos="down">
    {{fa-icon "comments"}}
    <span>
      {{#if stats.comment}}
        {{rough-estimate stats.comment}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

