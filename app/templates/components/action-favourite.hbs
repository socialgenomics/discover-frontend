{{#if isSubmitting}}
  {{fa-icon "circle-o-notch" pulse=true}}
{{else}}
  {{#if isHovered}}
    {{fa-icon "star-o" class="starred"}}
  {{else}}
    {{#if isStarred}}
      {{fa-icon "star" class="starred"}}
    {{else}}
      {{fa-icon "star-o"}}
    {{/if}}
  {{/if}}
{{/if}}

{{#if showCreateAccountModal}}
  {{! "container-class" is a temporary solution, changes in ember modal dialog required }}
  {{#repositive-modal
    container-class='c-modal--medium'
    close=(action 'toggleCreateAccountModal')
    targetAttachment="center"
  }}
    {{repositive-modal/header
      icon='star'
      title='Add to favourites'
      onClose=(action 'toggleCreateAccountModal')
    }}
    {{#repositive-modal/content}}
      {{create-account-modal-content text='To add this dataset to your favourites you need to have an account.'}}
    {{/repositive-modal/content}}
  {{/repositive-modal}}
{{/if}}
