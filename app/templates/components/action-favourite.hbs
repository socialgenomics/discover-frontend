{{#if isSubmitting}}
  {{fa-icon "circle-o-notch" pulse=true}}
{{else}}
  {{#if isHovered}}
    {{#if isStarred}}
      {{fa-icon "star" class="u-fw-bold u-tc-yellow"}}
    {{else}}
      {{fa-icon "star-o" class="u-fw-bold u-tc-yellow"}}
    {{/if}}
  {{else}}
    {{#if isStarred}}
      {{fa-icon "star" class="u-fw-bold u-tc-yellow"}}
    {{else}}
      {{fa-icon "star-o" class="u-fw-bold"}}
    {{/if}}
  {{/if}}
{{/if}}

{{#if showCreateAccountModal}}
  {{#modal-dialog
    close=(action 'toggleCreateAccountModal')
    targetAttachment="center"
    translucentOverlay=true
  }}
    {{#repositive-modal/wrapper size='medium'}}
      {{repositive-modal/header
        icon='star'
        title='Add to favourites'
        onClose=(action 'toggleCreateAccountModal')
      }}
      {{create-account-modal-content text='To add this dataset to your favourites you need to have an account.'}}
    {{/repositive-modal/wrapper}}
  {{/modal-dialog}}
{{/if}}
