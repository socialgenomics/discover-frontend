{{#if isOpen}}
<form {{action "addTag" on="submit"}}>
  {{input value=tag type="text" placeholder="Enter tag name"}}
  <button class="btn white grey-text" type="submit">Add Tag</button>
  <a {{action "toggleInput"}} class="grey-text cancel-btn">Cancel</a>
</form>
{{else}}
<button  {{action "toggleInput"}} class="btn white grey-text">Add Tag</button>
{{/if}}
