{{#if mainCredentialNotVerified}}

  <div class="c-flash-message--info p3 u-z1 mb4 rounded">
    <h3 class="mb3">Account not verfied</h3>
    <p class="mb3 mr2">We sent you an email to <strong class="fw-bold">{{credentials.main_credential.email}}</strong>, please check your email.</p>
    <a class="fc-secondary td-underline" {{action 'sendVerificationEmail' credentials.main_credential.email}}>Resend Verification Email</a>
  </div>

{{else if pendingCredential}}

  <div class="c-flash-message--info p3 z1 mb3 rounded">
    <h3 class="mb3">New email not verified</h3>
    <p class="mb3 mr2">We sent you an email to <strong class="fw-bold">{{pendingCredential.email}}</strong>, please check your email.</p>
    <a class="tc-secondary td-underline mb2 block" {{action 'sendVerificationEmail' pendingCredential.email}}>Resend Verification Email</a>
    <p class="fs1 fw-reg tc-tertiary mb0">We'll keep using your old email address ({{credentials.main_credential.email}}) until you verify your new one.</p>
  </div>

{{/if}}

{{#if addingCredential}}
  {{email-verification
    credentials=credentials
    toggleAddCredentialInput=(action 'toggleAddCredentialInput')}}
{{else}}
  {{credential-list
    credentials=credentials
    toggleAddCredentialInput=(action 'toggleAddCredentialInput')}}
{{/if}}

{{#link-to 'users.change-password' class='c-btn c-btn-secondary c-btn-small'}}
  Change Password
{{/link-to}}
