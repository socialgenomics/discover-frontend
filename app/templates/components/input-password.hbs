{{yield}}
<div class="input-container">
  <div class="input-field">
    {{input valueBinding="controller.password" id="input-password" type="password" placeholder="Password"}}
  </div>
  <div class="lbl">Create Password</div>
  <i class="mdi-action-lock-outline"></i>
  <div class="input-helper">Must contain at least one upper case and one number character.</div>
  {{#if showErrors}}
      {{#each error in errors.password}}
          <div class="text-invalid">{{ error }}</div>
      {{/each}}
  {{/if}}
</div>
