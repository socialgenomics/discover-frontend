{{validated-input
  label="New Password"
  class="u-mb1"
  type="password"
  value=password1
  errors=validations.attrs.password1.messages
  placeholder="e.g. •••••••••"
  helpText="Minimum 8 characters. Must include an uppercase letter or number."
  submit=(action 'submitForm')
}}
{{validated-input
  label="Confirm Password"
  class="u-mb1"
  type="password"
  value=password2
  errors=validations.attrs.password2.messages
  placeholder="e.g. •••••••••"
  helpText="Minimum 8 characters. Must include an uppercase letter or number."
  submit=(action 'submitForm')
}}
{{async-button
  class="c-btn c-btn-primary u-fs3 u-mb1 u-full-width"
  action=(action 'submitForm')
  default="Change Password"
  pending="Saving..."
  disableWhen=isDisabled
  reset=true
}}
