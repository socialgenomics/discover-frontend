<form class="flex bc-white border-left border-right" {{action search query on='submit'}}>
  <label class="flex-grow flex items-center">
    <span class="cursor-text">{{fa-icon "search" class='px3 fc-secondary'}}</span>
    {{input
      type="text"
      class="pr2 pl0 mr0 border-none"
      placeholder=placeholder
      value=query
      autofocus=true
    }}
  </label>
  {{#if hasSubmitButton}}
    <button class="c-btn c-btn-primary u-border-square u-self-stretch">Search</button>
  {{/if}}
</form>
