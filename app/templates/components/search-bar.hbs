<form class="u-flex u-bc-white border-left border-right" {{action search query on='submit'}}>
  <label class="u-flex-auto u-flex u-items-center">
    <span class="u-cursor-text">{{fa-icon "search" class='px3 u-tc-secondary'}}</span>
    {{input
      type="text"
      class="pr2 pl0 border-none"
      placeholder="title:cancer AND description:lung"
      value=query
      autofocus=true
    }}
  </label>
</form>
