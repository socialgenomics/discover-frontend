<div>
  {{#link-to 'user' user.id disabled=disabled invokeAction=(action 'toggleCreateAccountModal')}}
    <img src={{avatar}} class="u-w1" />
    <span class="u-fs2">{{user.displayName}}</span>
  {{/link-to}}
    <span class="u-tc-tertiary u-fs0">{{moment-from-now date allowEmpty=true}}</span>

  <div class="u-pr3">
    <p class="u-line-break u-mb0">{{markdown-to-html markdown=text extensions='targetBlankLinks'}}</p>
  </div>
</div>

{{#if showCreateAccountModal}}
  {{! "container-class" is a temporary solution, changes in ember modal dialog required }}
    {{#repositive-modal
      container-class='c-modal--medium'
      close=(action 'toggleCreateAccountModal')
      targetAttachment="center"
    }}
      {{repositive-modal/header
        image=avatar
        title=(concat 'View ' user.firstname '\'s profile')
        onClose=(action 'toggleCreateAccountModal')
      }}
      {{#repositive-modal/content}}
        {{create-account-modal-content text='To see another user\'s profile, create an account.'}}
      {{/repositive-modal/content}}
    {{/repositive-modal}}
{{/if}}
