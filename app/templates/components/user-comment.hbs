<div class="comment">
  <div class="comment-header">
    <div class="dp-wrapper">
      {{#link-to 'user' user.username}}
      {{
        gravatar-image
        class="gravatar"
        defaultImage=user.profile.avatar
      }}
      {{/link-to}}
    </div>
    {{#link-to 'user' user.username}}<h4>{{user.displayName}}</h4>{{/link-to}}
    <span>{{moment-from-now date}}</span>
  </div>
  <div class="comment-body">
    <p>{{text}}</p>
  </div>
