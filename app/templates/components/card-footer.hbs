<footer class="card-footer">
  <ul class="color-silver-chalice-text">
    {{#if model.access}}
      {{#if (eq model.access "open")}}
        <li class="access-icons">
          <i
            class="fa fa-globe color-fruit-salad-text"
            title="Public"></i>
          <span class="color-fruit-salad-text">
            {{model.access}}
          </span>
        </li>
        {{/if}}

        {{#if (eq model.access "restricted")}}
        <li class="access-icons">
          <i
            class="fa fa-lock color-red-error-text"
            title="Access application needed"></i>
          <span class="color-red-error-text">
            {{model.access}}
          </span>
        </li>
      {{/if}}
    {{/if}}

    {{#if model.count}}
      <li>
        {{fa-icon "eye"}}<span>{{model.count}}</span>
      </li>
    {{/if}}

    {{#if model.comments}}
      <li>{{fa-icon "comments"}}<span>{{model.comments.length}}</span></li>
    {{/if}}
  </ul>
</footer>
