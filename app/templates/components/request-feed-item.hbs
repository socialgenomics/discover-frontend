{{#link-to 'requests.detail' request.id classNames="feed-item-component"}}
  <main class="col m12">
    <div class="card dataset card-comp">

      <section class="card-type-section col m2">
        <img src="/assets/images/icons/icon-request-color_2@2x.png" class="data-icon">
        <p>Data Request</p>
      </section>

      <section class="card-user-section col m3">
        {{#if request.userId.displayName}}
          {{#link-to 'user' request.userId.id}}
            <img src={{request.userId.userProfile.avatar}} width="35px" height="35px">
            <p>{{request.userId.displayName}}</p>
          {{/link-to}}
        {{else}}
          <div class="">
            <div class="round-img">
              <img src="/assets/images/favicon.ico" class="data-icon">
            </div>
            <h4 class="data-title">A Repositive User</h4>
          </div>
        {{/if}}
        <!-- <p class="helper-text">is looking for data</p> -->
      </section>

      <section class="card-content-section col m7">
        {{#link-to 'requests.detail' request.id classNames="data-title"}}
          <h4 class="data-title">{{request.title}}</h4>
        {{/link-to}}
        <p class="markdown-text">{{markdown-to-html markdown=request.description}}</p>
      </section>

    </div>
  </main>
{{/link-to}}
