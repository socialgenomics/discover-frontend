{{#unless inEditMode}}
  <div class="u-flex u-justify-between">
    {{#if (eq attribute.key 'pmid')}}
      <a target="_blank"
        href="https://www.ncbi.nlm.nih.gov/pubmed/{{attribute.value}}"
        class="fs2 fc-secondary u-hv-tc-primary u-td-underline u-line-break"
        {{action 'trackPubmedClick'}}
        >
        {{attribute.value}}
      </a>
    {{else}}
      <p class="t-attr-item-text fs2 mb2 u-line-break">{{attribute.value}}</p>
    {{/if}}
    {{#if canEdit}}
      <div>
        {{fa-icon 'pencil' class='fc-tertiary u-hv-tc-secondary cursor-pointer fs2 mr2' click=(action 'enterEditMode')}}
        {{fa-icon 'trash-o' class='fc-tertiary u-hv-tc-secondary cursor-pointer fs2' click=(action 'deleteAttr')}}
      </div>
    {{/if}}
  </div>
{{else}}
  <form>
    {{validated-input
      errors=validations.attrs.attributeValue.messages
      noLabel=true
      type="text"
      value=value
    }}
    {{async-button
      class="c-btn c-btn-primary m3 mb2"
      action=(action 'save')
      default="Save"
      disableWhen=(not isValid)
      pending="Saving..."
    }}
    <button class="c-btn c-btn-text-secondary" {{action 'cancelEditMode'}}>Cancel</button>
  </form>
{{/unless}}
