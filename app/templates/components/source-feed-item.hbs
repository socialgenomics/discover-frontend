<main class="col m12">
  <div class="card dataset card-comp">

    <section class="card-type-section col m2">
      <img src="/assets/images/icons/icon-datasource@2x.png" class="data-icon">
      <p>Data Source</p>
    </section>

    <section class="card-content-section col m7">
      {{#link-to 'datasources.source' source.id classNames="data-title"}}
        <h4 class="data-title">{{name-fallback model=source}}</h4>
      {{/link-to}}
      {{#if source.description}}
        <p class="markdown-text">{{markdown-to-html markdown=source.description}}</p>
      {{/if}}
    </section>

  </div>
</main>
