{{#if (eq type 'collection')}}
  {{#link-to 'collections.collection' model.id}}
    <div class="truncate">
      <h4 class="collection-item">
        {{model.name}}
        {{#if isNew}}
          {{is-new-label}}
        {{/if}}
      </h4>
      {{collection-summary-fallback
        summary=model.properties.summary
        description=model.description
        class="collection-item truncate two-lines"}}
    </div>
  {{/link-to}}
{{else}}
  {{#link-to 'datasources.source' model.id}}
    {{#if model.properties.logo}}
      <img class="datasource-item" src="{{model.properties.logo}}">
    {{else}}
      <h4 class="datasource-item truncate">{{model.name}}</h4>
    {{/if}}
    {{collection-summary-fallback
      summary=model.properties.summary
      description=model.description
      class="truncate"}}
  {{/link-to}}
{{/if}}
