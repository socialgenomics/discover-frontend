{{#basic-dropdown verticalPosition=below as |dropdown|}}
  {{#dropdown.trigger onMouseDown=(action 'handleTriggerEvent') onTouchEnd=(action 'handleTriggerEvent') class="u-outline-none u-cursor-pointer u-p2"}}
    {{fa-icon 'bell'}}
  {{/dropdown.trigger}}

  {{#dropdown.content class="c-card u-flex u-flex-column"}}
    {{#if isLoading}}
      <span>loading...</span>
    {{else}}
      {{notification-list
        notifications=notifications
        dropdown=dropdown
        close=(action 'close')
        reloadNotifications=(action 'reloadNotifications')
      }}
    {{/if}}

  {{/dropdown.content}}
{{/basic-dropdown}}
