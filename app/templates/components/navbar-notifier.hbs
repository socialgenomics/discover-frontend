{{#basic-dropdown verticalPosition=below as |dropdown|}}
  {{#dropdown.trigger onMouseDown=(action 'setNotificationsToSeen') onTouchEnd=(action 'setNotificationsToSeen') class="u-outline-none u-cursor-pointer u-p2"}}
    {{fa-icon 'bell'}}
  {{/dropdown.trigger}}

  {{#dropdown.content class="c-card u-flex u-flex-column"}}
    {{notification-list
      notifications=notifications
      dropdown=dropdown
      close=(action 'close')
      reloadNotifications=(action 'reloadNotifications')
    }}
  {{/dropdown.content}}
{{/basic-dropdown}}
