{{#if (eq type "textarea")}}
  {{textarea
    value=value
    focus-in="focusedIn"
    focus-out="focusedOut"
    type=type
    placeholder=placeholder
    disabled=disabled
    class="u-textarea-resize-v"
  }}
  {{#unless (or disabled noMarkdown)}}
    <a class="u-fs0" {{action "toggleMarkdownModal"}}>How to format text with Markdown?</a>
  {{/unless}}
{{else}}
  {{input
    value=value
    focus-in="focusedIn"
    focus-out="focusedOut"
    type=type
    placeholder=placeholder
    insert-newline='submitForm'
    disabled=disabled
  }}
{{/if}}

{{#if isInvalid}}
  <ul class="o-list-flush-left">
    {{#each errors as |error|}}
      <li class="u-tc-red">{{error}}</li>
    {{/each}}
  </ul>
{{else if (and isActive (not isValid))}}
  <span>{{helpText}}</span>
{{/if}}

{{#if isShowingMarkdownModal}}
  {{markdown-modal action="toggleMarkdownModal"}}
{{/if}}
