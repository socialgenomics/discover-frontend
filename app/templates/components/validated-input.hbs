{{yield}}

<div class="input-field">
  {{#if textarea}}
    {{textarea
      value=value
      focus-in="focusedIn"
      focus-out="focusedOut"
      type=type
      placeholder=placeholder}}
  {{else}}
    {{input
      value=value
      focus-in="focusedIn"
      focus-out="focusedOut"
      type=type
      placeholder=placeholder
      insert-newline='submitForm'}}
  {{/if}}
</div>
<div class="lbl">{{lbl}}</div>
{{#if (eq icon "password")}} <i class="mdi-action-lock-outline"></i> {{/if}}
{{#if (eq icon "email")}} <i class="mdi-communication-email"></i> {{/if}}

  {{#if showInvalid}}
    {{#each errors as |error|}}
      <div class="text-invalid error-text">{{ error }}</div>
    {{/each}}
  {{else}}
    <div class="input-helper">{{helpText}}</div>
  {{/if}}
