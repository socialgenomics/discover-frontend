{{yield}}

<div class="input-field">
  {{#if textarea}}
    {{textarea
      value=value
      focus-in="focusedIn"
      focus-out="focusedOut"
      type=type
      placeholder=placeholder
    }}
  {{else}}
    {{input
      value=value
      focus-in="focusedIn"
      focus-out="focusedOut"
      type=type
      placeholder=placeholder
      insert-newline='submitForm'
    }}
  {{/if}}
</div>
<div class="lbl">{{lbl}}</div>

{{#if (eq icon "fullname")}}{{fa-icon "user"}}{{/if}}
{{#if (eq icon "password")}}{{fa-icon "lock"}}{{/if}}
{{#if (eq icon "email")}}{{fa-icon "envelope"}}{{/if}}

{{#if showInvalid}}
  <div class="errors">
    <ul class="text-invalid error-text">
      {{#each errors as |error|}}
        <li>{{error}}</li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="input-helper">{{helpText}}</div>
{{/if}}
