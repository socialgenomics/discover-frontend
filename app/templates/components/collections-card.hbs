<main class="col s12 m4 l4">
  <div class="card dataset card-comp">

    <header class="card-header">
      <div class="assay-container">
        <img src="/assets/images/icon-collection-2.0.png">
        {{#if collection.createdAt}}<p>{{moment-from-now collection.createdAt hideSuffix=true}} ago</p>{{/if}}
      </div>
      <div class="actions-container valign-wrapper">
        {{action-favourite action="toggleModal" dataset=dataset}}
        <span class="grey-text">{{dataset.favourite}}</span>
        {{action-share action="toggleModal" dataset=dataset}}
      </div>
    </header>

    <div class="card-body">
      <header class="card-user">
        {{#if collection.userId.userProfile.avatar}}
          <img src={{collection.userId.userProfile.avatar}}>
        {{/if}}
        <h6>
          {{#if collection.userId.displayName}}
            {{#link-to 'user' collection.userId.id}}{{collection.userId.displayName}}{{/link-to}}
          {{else}}
            A Repositive user
          {{/if}}
          <br>
          <span>created a collection of</span>
        </h6>
      </header>

      {{#link-to 'requests.detail' collection.id classNames="data-title"}}
        <div data-balloon={{collection.name}} data-balloon-pos="up" data-balloon-length="large">
          <h4 class="data-title">{{collection.name}}</h4>
        </div>
      {{/link-to}}

      <div class="line-limit-desc">
        <div class="ellipsis">
          <p class="sub-grey">
            {{collection.description}}
          </p>
        </div>
      </div>

    </div>

    {{card-footer model=collection}}
  </div>
</main>
