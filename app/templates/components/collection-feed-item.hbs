<main class="col m12">
  <div class="card dataset card-comp">

    <section class="card-type-section col m2">
      <img src="/assets/images/icons/icon-collection_2@2x.png" class="data-icon">
      <p>Collection</p>
    </section>

    <section class="card-user-section col m2">
      {{#link-to 'user' collection.userId.id}}
        <img src={{collection.userId.userProfile.avatar}} class="data-icon round-img">
        <p>{{collection.userId.displayName}}</p>
      {{/link-to}}
    </section>

    <section class="card-content-section col m7">
      {{#link-to 'collections.collection' collection.id classNames="data-title"}}
        <h4 class="data-title">{{collection.name}}</h4>
      {{/link-to}}
      <p class="markdown-text">{{markdown-to-html markdown=collection.description}}</p>
    </section>
  </div>
</main>
