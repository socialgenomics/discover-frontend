<div class="navbar-fixed">
  <nav class="navbar-grey">
  <div class="nav-wrapper">
     {{#link-to 'root'}}<div class="nav-logo">
     <img class="responsive-img" src="/assets/images/logo-full.png" alt="Repositive DNA logo"></div>{{/link-to}}
    <!-- {{#link-to 'root' class='hide-on-small-only brand-name'}}REPOSITIVE{{/link-to}} -->
    {{#if session.isAuthenticated}}
    <div class="left nav-input">
      <form {{action 'search' on='submit'}}>
        <div class="input-field grey-text">
          <i class="small mdi-action-search"></i>
          {{input type="text" class="grey-text" placeholder="human genomic datasets, e.g. cancer, prostate,..." value=query}}
       <!--    {{#search-button action='search' on="submit"}}
          {{/search-button}} -->
        </div>
      </form>
    </div>
    {{navbar-dropdown}}
    <div class="re-navbar-btn register grey-text">
      {{#link-to "datasets.register" class="valign-wrapper"}}<i class="mdi-action-note-add"></i><h6 class="mobile-hide">REGISTER <span class="tablet-hide">DATA</span></h6>{{/link-to}}
    </div>
    <div class="re-navbar-btn request grey-text">
      {{#link-to "datasets.request" class="valign-wrapper"}}<i class="mdi-content-content-paste"></i><h6 class="mobile-hide">REQUEST <span class="tablet-hide">DATA</span></h6>{{/link-to}}
    </div>
    {{else}}
    <ul class="right">
      <li>{{#link-to 'users.signup'}}SIGN UP{{/link-to}}</li>
      <li>{{#link-to 'users.login'}}LOGIN{{/link-to}}</li>
    </ul>
    {{/if}}
  </div>
  </nav>
</div>
