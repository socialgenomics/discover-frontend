<div class="u-bc-off-white c-navbar-wrapper u-pos-fixed u-pos-top0 u-full-width">
  <nav class="c-navbar u-flex u-justify-between u-items-center">

    <!-- LOGO -->
    {{#unless isAuthenticated}}
      <!-- desktop logo -->
      <a href="https://repositive.io" class="u-hide-on-sm-md c-navbar__element u-mr2 u-pl2">
        <img src="/assets/images/logo-full-larger.png" alt="Repositive DNA logo">
      </a>
      <!-- mobile logo -->
      <a href="https://repositive.io" class="u-hide-on-lg u-w1 u-mr2 u-pl2">
        <img src="/assets/images/repositive-logo.png" alt="Repositive DNA logo">
      </a>
    {{else}}
      <!-- desktop logo -->
      {{#link-to 'root' class="u-hide-on-sm-md c-navbar__element u-mr2 u-pl2"}}
        <img src="/assets/images/logo-full-larger.png" alt="Repositive DNA logo">
      {{/link-to}}
      <!-- mobile logo -->
      {{#link-to 'root' class="u-hide-on-lg u-w1 u-mr2 u-pl2"}}
        <img src="/assets/images/repositive-logo.png" alt="Repositive DNA logo">
      {{/link-to}}
    {{/unless}}

    <!-- SEARCH -->
    {{#if isAuthenticated}}

      <div class="c-navbar__center-block u-flex u-items-stretch">
        <div class="u-flex-grow-1">
          {{search-bar search=(route-action 'search')}}
        </div>

        {{#link-to "datasets.register" class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-secondary u-border-right u-hv-bc-off-white"}}
            {{fa-icon "clipboard"}}
            <span class="u-fs1 u-pl1">Register Data</span>
        {{/link-to}}

        {{#link-to "datasets.request" class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-secondary u-border-right u-hv-bc-off-white"}}
            {{fa-icon "clipboard"}}
            <span class="u-fs1 u-pl1">Request Data</span>
        {{/link-to}}
      </div>

      {{navbar-dropdown avatar=avatar firstname=firstname username=username userId=userId}}

    {{else}}

      <div class="c-navbar__center-block u-flex u-items-stretch">
        {{#unless isRootRoute}}
          <div class="u-flex-grow-1">
            {{search-bar search=(route-action 'search')}}
          </div>
        {{/unless}}

        <div class="u-flex">
          <a href="http://repositive.io/about" class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-secondary u-hv-bc-off-white">About</a>
          <a href="http://blog.repositive.io/" class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-border-right u-tc-secondary u-hv-bc-off-white">Blog</a>
          {{#link-to 'users.login' class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-secondary u-hv-bc-off-white"}}Login{{/link-to}}
          {{#if isRootRoute}}
            {{#link-to 'users.signup' class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-teal u-hv-bc-off-white" invokeAction=(action 'trackCreateAccount' 'discover_landingpage_navbar_createAccount')}}Create Account{{/link-to}}
          {{else}}
            {{#link-to 'users.signup' class="u-hide-on-sm-md u-flex u-items-center u-justify-center c-navbar__element u-tc-teal u-hv-bc-off-white" invokeAction=(action 'trackCreateAccount' 'discover_openpage_navbar_createAccount')}}Create Account{{/link-to}}
          {{/if}}
        </div>
      </div>
      {{navbar-dropdown trackCreateAccount=(action 'trackCreateAccount')}}


    {{/if}}
  </nav>
</div>
