{{#unless isEmptyFilters}}
  {{#each filters as |filter|}}
    <div class="section mb4">
      {{#if (eq filter.displayName "Datasource")}}
        <h4 class="mb1 fc-primary fs1 fw-bold">Data Source</h4>
      {{else}}
        <h4 class="mb1 fc-primary fs1 fw-bold">{{ filter.displayName }}</h4>
      {{/if}}
      {{#if isLoading}}
        <p class="loading-text">Loading new filters...</p>
      {{else}}
        <div class="pl3">
          {{#each filter.buckets as |bucket|}}
            {{filter-list-item
              addFilter=addFilter
              removeFilter=removeFilter
              activeFilters=activeFilters
              aggName=filter.name
              bucket=bucket
            }}
          {{/each}}
        </div>
      {{/if}}
    </div>
  {{/each}}
{{else}}
  <p class="pt2 fc-secondary">No filters available</p>
{{/unless}}
