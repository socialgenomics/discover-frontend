<h4 class="unfocus-grey-text">Filters</h4>
{{#each filters as |filter|}}
  {{#if filter.show}}
    <div class="section">
      {{#if (eq filter.displayName "Datasource")}}
        <h4>Data Source</h4>
      {{else}}
        <h4>{{ filter.displayName }}</h4>
      {{/if}}
      {{#each filter.buckets as |bucket|}}
        {{filter-list-item
          bucket=bucket
          aggName=filter.name
          addFilter=(action addFilter)
          removeFilter=(action removeFilter)
        }}
      {{/each}}
      <div class="divider"></div>
    </div>
  {{/if}}
{{/each}}
