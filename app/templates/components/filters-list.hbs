{{#unless light-font-color}}
  <h4 class="unfocus-grey-text">Filters</h4>
{{/unless}}
{{#each filters as |filter|}}
  <div class="section">
    {{#if (eq filter.displayName "Datasource")}}
      <h4>Data Source</h4>
    {{else}}
      <h4>{{ filter.displayName }}</h4>
    {{/if}}
    {{#if isLoading}}
      <p>Loading new filters...</p>
    {{else}}
      {{#each filter.buckets as |bucket|}}
        {{filter-list-item
          bucket=bucket
          aggName=filter.name
          search=(route-action 'search')
        }}
      {{/each}}
    {{/if}}
    <div class="divider"></div>
  </div>
{{/each}}
