<div class="u-pos-relative">
  <div class="u-ta-center">
    <div class="profile-img">
      <img class="u-w4 u-mb1 u-circle" src={{user.profile.avatar}}>
    </div>
    <h1 class="u-fs3 u-tc-primary u-mb1 u-fw-reg">{{user.displayName}}</h1>

    {{#if user.profile.work_organisation}}
      <h2 class="u-fs2 u-tc-secondary u-mb0 u-fw-reg">{{user.profile.work_organisation}}</h2>
    {{else if isOwnProfile}}
      {{#link-to "users.profile" class="u-block u-mb1 u-tc-tertiary u-td-underline u-hv-tc-secondary"}}Add where you work{{/link-to}}
    {{/if}}

    {{#if user.profile.work_role}}
      <h3 class="u-fs1 u-tc-secondary u-fw-reg">{{user.profile.work_role}}</h3>
    {{else if isOwnProfile}}
      {{#link-to "users.profile" class="u-block u-mb3 u-tc-tertiary u-td-underline u-hv-tc-secondary"}}Add your job role{{/link-to}}
    {{/if}}
  </div>

  {{#if isOwnProfile}}
    {{#link-to "users.profile" class="u-pos-absolute u-pos-right0 u-pos-top0"}}
      {{fa-icon "pencil" class="u-tc-tertiary u-hv-tc-secondary u-fs3"}}
    {{/link-to}}
  {{/if}}

  {{#if isVerified}}
    <h4 class="u-ta-center u-tc-teal u-fs2">{{fa-icon "check-circle"}} Verified Account</h4>
  {{else}}
    {{#if isOwnProfile}}
      <h4 class="u-ta-center">{{#link-to 'users.trust' class="u-tc-red"}}{{fa-icon "envelope"}} Please verify your email{{/link-to}}</h4>
    {{/if}}
  {{/if}}

  <div class="u-mb3">
    {{#text-with-icon icon='calendar-o' class="u-mb1"}}
      Joined {{moment-format user.createdAt 'MMMM YYYY'}}
    {{/text-with-icon}}
    {{#if user.profile.location}}
      {{text-with-icon text=user.profile.location icon='map-marker' class="u-mb1"}}
    {{/if}}
  </div>

  {{#if user.profile.bio}}
    <div class="u-mb3">
      <h3 class="u-fs1 u-fw-reg u-tc-tertiary u-mb1">BIO</h3>
      <p class="u-tc-secondary u-hyphens-auto">{{user.profile.bio}}</p>
    </div>
  {{else if isOwnProfile}}
    <div class="u-mb3">
      <h3 class="u-fs1 u-fw-reg u-tc-tertiary u-mb1">BIO</h3>
      {{#link-to "users.profile" class="u-block u-tc-tertiary u-td-underline u-hv-tc-secondary"}}Add your bio{{/link-to}}
    </div>
  {{/if}}

  {{#if user.profile.interests}}
    <div class="u-mb3">
      <h3 class="u-fs1 u-fw-reg u-tc-tertiary u-mb1">INTERESTS</h3>
      {{#each user.profile.interests as |interest|}}
        {{tag-item
          type='interest'
          tagText=interest
        }}
      {{/each}}
    </div>
  {{else if isOwnProfile}}
    <div class="u-mb3">
      <h3 class="u-fs1 u-fw-reg u-tc-tertiary u-mb1">INTERESTS</h3>
      {{#link-to "users.profile" class="u-block u-tc-tertiary u-td-underline u-hv-tc-secondary"}}Add your interests{{/link-to}}
    </div>
  {{/if}}

  {{#if user.profile.accounts}}
    <h3 class="u-fs1 u-fw-reg u-tc-tertiary u-mb1">CONNECTED ACCOUNTS</h3>
    {{account-link account=user.profile.accounts.linkedIn accountName="LinkedIn"}}
    {{account-link account=user.profile.accounts.googlePlus accountName="Google"}}
    {{account-link account=user.profile.accounts.twitter accountName="Twitter"}}
    {{account-link account=user.profile.accounts.orcid accountName="Orcid"}}
    {{account-link account=user.profile.accounts.researchGate accountName="ResearchGate"}}
  {{/if}}
</div>
