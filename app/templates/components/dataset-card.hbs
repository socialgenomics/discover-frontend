<div class="c-card">
  {{#if (eq type "request")}}
  <!-- Card Header -->
    <div class="u-bc-off-white">
      <div class="assay-container">
        <div class="request">Request</div>
      </div>
      <ul class="o-list-inline o-list-flush-left mb0">
        {{action-favourite model=dataset class="m3"}}
        {{action-share
          actionableId=dataset.id
          actionableType='dataset'
          shareUrl=shareUrl
        }}
      </ul>
    </div>

    <div class="p2">
      {{#if dataset.highlights.title}}
        {{#link-to 'requests.detail' dataset.id classNames="data-title"}}
          <div data-balloon={{dataset.title}} data-balloon-pos="up" data-balloon-length="large">
            <h4 class="data-title">{{{truncate dataset.highlights.title 70}}}</h4>
          </div>
        {{/link-to}}
      {{else}}
        {{#link-to 'requests.detail' dataset.id classNames="data-title"}}
          <div data-balloon={{dataset.title}} data-balloon-pos="up" data-balloon-length="large">
            <h4 class="mb0">{{truncate dataset.title 70}}</h4>
          </div>
        {{/link-to}}
      {{/if}}

      {{from-label model=dataset type=type}}

      <div class="c-card-description u-markdown-formatting">
        {{#if dataset.highlights.description}}
          {{{markdown-to-html markdown=dataset.highlights.description extensions='targetBlankLinks sanitize'}}}
        {{else}}
          {{markdown-to-html markdown=dataset.description extensions='targetBlankLinks sanitize'}}
        {{/if}}
      </div>
    </div>
    <div class="card-footer">
      {{stats-list stats=dataset.stats statType="datasets" class="pb3 pl3"}}
    </div>

  {{else}}
    <!-- It is a Dataset -->
    <!-- Card Header -->
    <header class="c-card-header u-bc-off-white u-flex {{if hasAssays 'u-justify-between' 'u-justify-end'}} u-items-center px3">
      {{#if hasAssays}}
        {{assay-list assays=assaysToDisplay}}
      {{/if}}
      <ul class="u-flex o-list-flush-left pl3 mb0">
        {{action-favourite model=dataset class="m3"}}
        {{action-share
          actionableId=dataset.id
          actionableType='dataset'
          shareUrl=shareUrl
        }}
      </ul>
    </header>

    <div class="p3">
      {{#if dataset.highlights.title}}
        {{#link-to 'datasets.detail' dataset.id classNames="data-title"}}
          <div data-balloon={{dataset.title}} data-balloon-pos="up" data-balloon-length="large">
            <h4 class="u-fs2 u-fw-med u-tc-primary c-card-title mb2">
              {{{truncate dataset.highlights.title 70}}}
            </h4>
          </div>
        {{/link-to}}
      {{else}}
        {{#link-to 'datasets.detail' dataset.id classNames="data-title"}}
          <div data-balloon={{dataset.title}} data-balloon-pos="up" data-balloon-length="large">
            <h4 class="u-fs2 u-fw-med u-tc-primary c-card-title mb2">
              {{truncate dataset.title 70}}
            </h4>
          </div>
        {{/link-to}}
      {{/if}}

      {{from-label model=dataset type=type}}

      <div class="c-card-description u-markdown-formatting">
        {{#if dataset.highlights.description}}
          {{{markdown-to-html markdown=dataset.highlights.description extensions='targetBlankLinks sanitize'}}}
        {{else}}
          {{markdown-to-html markdown=dataset.description extensions='targetBlankLinks sanitize'}}
        {{/if}}
      </div>
    </div>

    {{stats-list stats=dataset.stats access=dataset.access statType="datasets" class="pb3 pl3 u-tc-tertiary"}}

  {{/if}}
</div>
