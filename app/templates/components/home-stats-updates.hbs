<header class="contain">
  <div class="col m12 center-align">

    <section class="stats">
      <h2 class="numb">
        <span class="stats-text thin">Search through </span>
        {{#link-to 'datasets.search' (query-params q="") class="sub-grey"}}
          {{datasetsNumber}}
        {{/link-to}}
        <span class="stats-text thin"> Human Genomic Datasets </span>
      </h2>
    </section>

    <div class="card">

      <section class="featured-section center-align">
        <div class="row">

          <div class="col m6">
            {{#link-to 'collections'}}
              <h3>
                <img src="/assets/images/icons/icon-collection@2x.png" class="data-icon">
                Collections <span class="stats-text thin">{{stats.repositive_collections}}</span>
              </h3>
            {{/link-to}}

            {{#each (sort-by "updatedAt:desc" collections) as |collection|}}
              {{featured-list-item model=collection type='collection'}}
            {{/each}}
          </div>

          <div class="col m6">
            {{#link-to 'datasources'}}
              <h3>
                <img src="/assets/images/icons/icon-datasource_2@2x.png" class="data-icon">
                Data Sources <span class="stats-text thin">{{stats.datasources}}</span>
              </h3>
            {{/link-to}}

            {{#each (sort-by "name" datasources) as |datasource|}}
              {{featured-list-item model=datasource type='datasource'}}
            {{/each}}
          </div>

        </div>
      </section>

    </div>
  </div>
</header>
