<header class="contain">
  <h5 class="subtitles-left unfocus-grey-text">Search Through</h5>
  <div class="col m12 center-align">
    <div class="card">

      <section class="stats">
        <h2 class="numb">
          <span class="stats-text thin">Search through </span>
          {{#link-to 'datasets.search' (query-params q="") class="sub-grey"}}
            {{datasetsNumber}}
          {{/link-to}}
          <span class="stats-text thin"> Human Genomic Datasets </span>
        </h2>
      </section>

      <section class="featured-section center-align">
        <div class="row">
          <div class="col m6">
            {{#link-to 'collections'}}
              <h3>Collections {{stats.repositive_collections}}</h3>
            {{/link-to}}
            {{#each featuredCollections as |collection|}}
              <h4>{{collection.name}}</h4>
            {{/each}}
          </div>
          <div class="col m6">
            {{#link-to 'datasources'}}
              <h3>Data Sources {{stats.datasources}}</h3>
            {{/link-to}}
            {{#each featuredDatasources as |datasource|}}
              <h4>{{datasource.name}}</h4>
            {{/each}}
          </div>
        </div>
      </section>

