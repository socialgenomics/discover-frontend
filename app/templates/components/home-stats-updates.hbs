<header class="contain">
  <div class="col m12 center-align">

    {{dataset-number-stats datasetsNumber=datasetsNumber}}

    <div class="card">

      <section class="featured-section center-align">
        <div class="row">

          <div class="col m6">
            {{#link-to 'collections' invokeAction=(action 'trackUpdatesHeaders' 'collections')}}
              <h3>
                {{fa-icon "book"}}
                Collections <span class="stats-text thin">{{stats.repositive_collections}}</span>
              </h3>
            {{/link-to}}

            {{#each (sort-by "updatedAt:desc" collections) as |collection index|}}
              {{featured-list-item
                model=collection
                isNew=(eq index 0)
                type='collection'
              }}
            {{/each}}
          </div>

          <div class="col m6">
            {{#link-to 'datasources' invokeAction=(action 'trackUpdatesHeaders' 'datasources')}}
              <h3>
                {{fa-icon "database"}}
                Data Sources <span class="stats-text thin">{{stats.datasources}}</span>
              </h3>
            {{/link-to}}

            {{#each (sort-by "name" datasources) as |datasource|}}
              {{featured-list-item model=datasource type='datasource'}}
            {{/each}}
          </div>

        </div>
      </section>

    </div>
  </div>
</header>
