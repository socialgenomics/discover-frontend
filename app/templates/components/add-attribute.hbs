{{validated-input
  errors=validations.attrs.attributeValue.messages
  noLabel=true
  placeholder=placeholder
  type="text"
  value=attributeValue
}}
{{rui/r-async-button
  action=(action 'add')
  default="Add"
  disableWhen=(not isValid)
  pending="Adding..."
  variant="primary"
}}
{{rui/r-button
  variant="cancel"
  label="Cancel"
  clickHandler=(action "cancel")
}}
