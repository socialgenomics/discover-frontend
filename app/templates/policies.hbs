<h1>Policies</h1>

<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3">
        {{#if (eq tab "privacy")}}
        {{#link-to 'policies' model (query-params tab="privacy") class="active"}}Privacy Policy{{/link-to}}
        {{else}}
        {{#link-to 'policies' model (query-params tab="privacy")}}Privacy Policy{{/link-to}}
        {{/if}}
      </li>
      <li class="tab col s3">
        {{#if (eq tab "terms")}}
        {{#link-to 'policies' model (query-params tab="terms") class="active"}}Terms of Service{{/link-to}}
        {{else}}
        {{#link-to 'policies' model (query-params tab="terms")}}Terms of Service{{/link-to}}
        {{/if}}
      </li>
    </ul>
    {{#if (eq tab "privacy")}}
    {{partial "policies/tab-privacy"}}
    {{else}}
    {{partial "policies/tab-terms"}}
    {{/if}}
  </div>
</div>
