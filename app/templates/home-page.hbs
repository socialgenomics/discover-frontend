    <div class="row padding-left-right">
      <!-- data registrations -->
      <div class="col m6 left registered-data">
      <h5 class="left-align unfocus-grey-text">Recently added data</h5>
      <div class="card dataset">
        <div class="card-header register-top light-blue lighten-4">
          <p>
            Do you have data to share? Do not be a tight-arse and share with the rest.
          </p>
        </div>
        <div class="card-content">
          <h6 class="center">The latest registrations</h6>
            {{#each register in model.registered}}
              {{mini-dataset dataset=register action="toggleModal"}}
            {{/each}}
        </div>
      </div>
    </div>
    <!--data requests-->
    <div class="col m6 left registered-data">
      <h5 class='left-align unfocus-grey-text'>Requested datasets</h5>
      <div class="card dataset">
        <div class="card-header register-top amber lighten-3">
          <p>
            Haven't found what you are looking for? There is a community of generous scientists happy to share.
          </p>
        </div>
        <div class="card-content">
          <h6 class='center'>The latest requests</h6>
          {{#each request in model.requests}}
            {{mini-dataset dataset=request}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
