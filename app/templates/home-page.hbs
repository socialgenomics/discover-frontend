<div id="homepage">

      <!-- <p class="sub-head">Find the most relevant and hight quality datasets.</p> -->
      <div class="row">
        <div class="col m12 center-align">
          <div class="stats"><span class="numb">{{ model.stats.repos }}</span><span class="stats-text">Repositories</span></div>
          <div class="stats"><span class="numb">{{ model.stats.datasets }}</span><span class="stats-text">Datasets</span></div>
        </div>
      </div>
      <div class="row">
        <div class="col m12 left-align">
        <h5 class="padding-left-right unfocus-grey-text">Start exploring</h5>
          {{#each dataset in model.datasets}}
            {{render 'datasets/card' model.datasets dataset=dataset}}
          {{/each}}
        </div>
      </div>


<!--   {{#each dataset in model.datasets }}
