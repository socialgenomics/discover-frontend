<div class="grid-wrapper grid-wrapper-stepped">
  <div class="grid">
    <main>
      {{home-stats-updates stats=model.stats collections=model.collections datasources=model.datasources}}

      <section>
        <h3 class="pl4 fs2 fc-secondary">Featured Datasets</h3>
        {{#each model.datasets as |dataset|}}
          {{dataset-card dataset=dataset}}
        {{/each}}
      </section>

      <section>
        <div class="grid__col grid__col--1-of-2">
          {{activity-card model=registrationsSorted group="registration" linkToRoute='registrations'}}
        </div>
        <div class="grid__col grid__col--1-of-2">
          {{activity-card model=requestsSorted group="request" linkToRoute='requests'}}
        </div>
      </section>
    </main>
  </div>
</div>
