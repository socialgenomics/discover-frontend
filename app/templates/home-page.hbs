<div id="homepage" class="content">
  <div class="row">

    <header class="contain">
      <h5 class="subtitles-left unfocus-grey-text">Search Through</h5>
      <div class="col m12 center-align">
        <div class="card">
          <div class="stats">
            <h2 class="numb">
              {{#link-to 'datasets.search' (query-params q="") class="sub-grey"}}
                {{datasetsNumber}}
              {{/link-to}}
              <span class="stats-text thin"> Human Genomic Datasets </span><span class="stats-text thin">from</span>
              {{model.stats.repos}}<span class="stats-text thin"> Repositories</span>
            </h2>

            <section class="featured-section col m10 offset-m1">
              <div class="divider"></div>
              <div class="row">
                <div class="featured-content col m4">
                  {{#link-to 'datasets.search' (query-params q="xpressomics") class="sub-grey"}}
                    <span class="no-padding font-varela-round">Featured Data Source</span>
                    <div class="logo-image">
                      <img class="img-responsive" src="assets/images/logos/xpressomics-logo.png"/>
                    </div>
                  {{/link-to}}
                </div>
                <div class="featured-content col m4">
                  {{#link-to 'datasets.search' (query-params q="Chinese Control Data") class="sub-grey"}}
                    <span class="no-padding font-varela-round">New Collection</span>
                    <div class="logo-image">
                      <h2>Chinese Control Data</h2>
                    </div>
                  {{/link-to}}
                </div>
                <div class="featured-content col m4">
                  {{#link-to 'datasets.search' (query-params datasource="HORIZON_DISCOVERY" q="") class="sub-grey"}}
                    <span class="no-padding font-varela-round">New Data Source</span>
                    <div class="logo-image">
                      <img class="img-responsive" src="assets/images/logos/horizon-logo.png"/>
                    </div>
                  {{/link-to}}
                </div>
              </div>
            </section>

          </div>
        </div>
    </div>
  </header>

    <div class="contain">
      <h5 class="subtitles-left unfocus-grey-text">Popular Datasets</h5>
      {{#each model.datasets as |dataset|}}
        {{dataset-card dataset=dataset toggleModal="toggleModal"}}
      {{/each}}
    </div>
    <div class="contain">
      <h5 class="subtitles-left unfocus-grey-text">User Activity</h5>
      <!-- data registrations -->
      <div class="col s12 m6">
        <div class="card activity-card registered-data">
          <div class="card-header card-title center">
            {{#link-to 'datasets.register'}}
              {{fa-icon "book"}}
              <h4 class="uppercase">Registered Data</h4>
            {{/link-to}}
          </div>
          <p class="info-text">
            These are datasets contributed by our community. You can easily register your dataset and make it visible for others.
          </p>
          <div class="card-content">
              {{#each registrationsSorted as |registration|}}
                {{mini-dataset dataset=registration action="toggleModal"}}
              {{/each}}
          </div>
        </div>
      </div>
      <!--data requests-->
      <div class="col s12 m6">
        <div class="card activity-card requested-data">
          <div class="card-header center card-title">
              {{#link-to 'datasets.request'}}
                {{fa-icon "clipboard"}}
                <h4 class="uppercase">Requested Data</h4>
              {{/link-to}}
          </div>
          <p class="info-text">
            Help our community by connecting them with the datasets they're looking for.
  If youâ€™re seeking datasets you can make a request too.
          </p>
          <div class="card-content">
            {{#each requestsSorted as |request|}}
              {{mini-dataset dataset=request type="request" action="toggleModal"}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
