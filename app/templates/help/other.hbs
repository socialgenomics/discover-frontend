<div class="content">
  <div class="row">
    {{help-tabs tab="other"}}
    <div class="col m12">
      <div class="card white no-margin darken-1">
        <div class="card-content">
          <div class="row margin-top">
            <div class="col m4 help-menu">
              <ol>
                <li>{{#link-to 'help.other' (query-params help="why-tag")}}Why should I tag a dataset?{{/link-to}}</li>
                <li>{{#link-to 'help.other' (query-params help="incorrect-tag")}}What should I do if a previous tag is incorrect?{{/link-to}}</li>
                <li>{{#link-to 'help.other' (query-params help="contribute-discussion")}}How to contribute to discussion?{{/link-to}}</li>
                <li>{{#link-to 'help.other' (query-params help="good-tag")}}What maked a good tag?{{/link-to}}</li>
                <li>{{#link-to 'help.other' (query-params help="format")}}How can I format my descriptions and discussions?{{/link-to}}</li>
              </ol>
            </div>
            <div class="col m8 help-content">
              <div class="markdown-text">
                {{#if (not help)}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/why-tag')}}
                {{else if (eq help "why-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/why-tag')}}
                {{else if (eq help "incorrect-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/incorrect-tag')}}
                {{else if (eq help "contribute-discussion")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/contribute-discussion')}}
                {{else if (eq help "good-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/good-tag')}}
                {{else if (eq help "format")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/format')}}
                {{/if}}
              </div>
              <div class="divider"></div>
              {{more-help-btn}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
