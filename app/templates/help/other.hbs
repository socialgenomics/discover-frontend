<div class="grid-wrapper grid-wrapper-stepped">
  <div class="grid grid--no-gutter">
    <div class="grid__col grid__col--3-of-3">
      {{help-tabs tab="requesting"}}
      <div class="c-card c-card-detail-overflow u-rounded-bottom u-py3">
        <div class="grid grid--no-gutter u-full-height">
          <div class="grid__col grid__col--1-of-3 u-fs2 u-fw-med">
            <ul class="o-list-flush-left u-px3">
              {{help-docs-link link="help.other" query="why-tag" text="Why should I tag a dataset?"}}
              {{help-docs-link link="help.other" query="incorrect-tag" text="What should I do if a previous tag is incorrect?"}}
              {{help-docs-link link="help.other" query="contribute-discussion" text="How can I contribute to a discussion?"}}
              {{help-docs-link link="help.other" query="good-tag" text="What makes a good tag?"}}
              {{help-docs-link link="help.other" query="format" text="How can I format my descriptions and discussions??"}}
            </ul>
          </div>
          <div class="grid__col grid__col--2-of-3 u-full-min-height u-mb3 u-fs2 u-border-left">
            <div class="u-markdown-formatting u-mb3 u-px3">
              {{#if (not help)}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/why-tag')}}
              {{else if (eq help "why-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/why-tag')}}
              {{else if (eq help "incorrect-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/incorrect-tag')}}
              {{else if (eq help "contribute-discussion")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/contribute-discussion')}}
              {{else if (eq help "good-tag")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/good-tag')}}
              {{else if (eq help "format")}}{{markdown-to-html markdown=(fr-markdown-file 'help/other/format')}}
              {{/if}}
              <div class="c-divider c-divider-light-bg"></div>
            </div>
            {{more-help-btn}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
