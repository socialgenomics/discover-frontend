{{outlet}}
<div class="content">
  <div class="row center-align">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="card-body">
            <div class="row">
              <div class="col m12">
                <div class="landing-title">
                  <h1><strong>DATA DISCOVERY PLATFORM</strong></h1>
                  <h3><em>Designed for users who produce, look for and use human genomic data.</em></h3>
                </div>
              </div>
              <div class="col m6">
                <img src="/assets/images/landing-page.png" class="lizard-image-landing" alt="landing page lizard">
              </div>
              <div class="col m5 offset-m1">
                <div class="landing-form">
                  <div class="row">
                    <div class="col m10 offset-m1">
                      {{#link-to 'typeform' tagName='button' class='btn teal full-width'}}SIGN UP FOR BETA{{/link-to}}
                      <span>The platform is in development and we invite only users who are willing to give us feedback.</span>
                      <div class="or-div">
                        <span>DO YOU HAVE THE ACTIVATION CODE?</span>
                      </div>
                      <form {{action "submitForm" on="submit"}}>
                        {{validated-input placeholder="please enter your code" value=code errors=errors.code}}
                        <button type="submit" class="btn teal full-width">Continue</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
