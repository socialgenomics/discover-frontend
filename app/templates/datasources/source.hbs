{{metadata-panel source=model.source datasets=model.datasets action="showMoreMeta" param=showMore}}

<div class="content {{if showMore "right"}}">
  <div class="row card-content">
    {{#link-to 'datasources'}}
      {{fa-icon 'chevron-left'}} Back to all data sources
    {{/link-to}}
    {{#each model.datasets as |dataset|}}
      {{dataset-card dataset=dataset action="toggleModal"}}
    {{/each}}
  </div>
</div>
