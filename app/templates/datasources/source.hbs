{{metadata-panel source=model.source datasets=model.datasets}}

<section class="row content">
  <div class="contain">
    {{#link-to 'datasources'}}
      {{fa-icon 'chevron-left'}} Back to all data sources
    {{/link-to}}

    <div class="card-content">
      {{#each model.datasets as |dataset|}}
        {{dataset-card dataset=dataset action="toggleModal"}}
      {{/each}}
    </div>
  </div>
</section>
