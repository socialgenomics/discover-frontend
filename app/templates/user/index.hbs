<div class="container" id="profile">
<div class="row no-margin">
  <div class="card white darken-1 center">
    <h3 class="center">Your Profile</h3>
    <hr class="yellow">
    <div class="card-content center-align col m12 grey-text">
      <div class="row">
        <div class="col m12 center">
            <img class="profile-img circle" src="/assets/icons/person-icon.png">
        </div>
        <div class="col m12">
          <h3>{{model.user.firstname}} {{model.user.lastname}}</h3>
          <p class="helper-text">{{model.profile.workOrganisation}}</p>
          <p class="helper-text">{{model.user.email}}</p>
        </div>
        <div class="bottom-fixed">
        {{#link-to "users.profile"}}<button class="btn yellow white-text"><i class="mdi-editor-border-color"></i>EDIT PROFILE</button>{{/link-to}}
        </div>
      </div>
      <div class="divider"></div>
      <div class="row no-margin-bottom">
        <div class="activity-stats col m12">
          <div class="activity-saved-data">
            <span class="numb">0</span>
            <h5>Saved data</h5>
          </div>
          <div class="activity-uploads">
            <span class="numb">0</span>
            <h5>Registrations</h5>
          </div>
          <div class="activity-request">
            <span class="numb">0</span>
            <h5>Requests</h5>
          </div>
          <div class="activity-comments">
            <span class="numb">0</span>
            <h5>Comments</h5>
          </div>
          <span class="stretch"></span>
        </div>
      </div>
    </div>
  </div>
</div><!--end of top profile card-->
