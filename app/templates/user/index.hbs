    <!--registered dataset card-->
    <div class="card profile-datasets left white darken-1">
      <div class=" center-align">
        <h3>Registered Datasets</h3>
        <hr class="teal">
        {{#if model.datasets}}
          {{#each dataset in model.datasets}}
            {{mini-dataset dataset=dataset}}
          {{/each}}
        {{else}}
          <p class="helper-text">Have data to share?</p>
          <p>Don't be a tight-arse, share with the rest.</p>
          <div class="bottom-fixed">
          {{#link-to 'datasets.register'}}<button class="btn teal white-text"><i class="mdi-action-note-add"></i>REGISTER</button>{{/link-to}}
          </div>
        {{/if}}
      </div>
    </div>
    <div class="card profile-datasets right white darken-1">
      <div class="center-align">
        <h3>Requested Datasets</h3>
        <hr class="red">

        {{#if requests}}
          {{#each request in requests}}
            {{mini-dataset dataset=request}}
          {{/each}}
        {{else}}
          <p class="helper-text">Haven't found what you're looking for?</p>
          <p>There is a community of generous scientists happy to help.</p>
          <div class="bottom-fixed">
          {{#link-to 'datasets.request'}}<button class="btn red white-text"><i class="mdi-content-content-paste"></i>REQUEST</button>{{/link-to}}
          </div>
        {{/if}}
      </div>
    </div>
</div>
</div>


