<div class="grid-wrapper grid-wrapper-fluid">
  <div class="grid">
    <div class="grid__col grid__col--1-of-3">
      <section class="c-card u-p2 u-full-width">
        <div class="u-pos-relative">

          <div class="u-ta-center">
            <div class="profile-img">
              <img class="u-w4 u-mb1 u-circle" src={{user.profile.avatar}}>
            </div>
            <h1 class="u-fs3 u-tc-primary u-mb1 u-fw-reg">{{user.displayName}}</h1>
            <h2 class="u-fs2 u-tc-secondary u-mb0 u-fw-reg">{{user.profile.work_organisation}}</h2>
            <h3 class="u-fs1 u-tc-secondary u-fw-reg">{{user.profile.work_role}}</h3>
          </div>

          {{#if isOwnProfile}}
            {{#link-to "users.profile" class="u-pos-absolute u-pos-right0 u-pos-top0 "}}
              {{fa-icon "pencil" class="u-tc-tertiary u-hv-tc-secondary u-fs3"}}
            {{/link-to}}
          {{/if}}

          {{#if model.is_verified}}
            <h4 class="u-ta-center u-tc-teal u-fs2">{{fa-icon "check-circle"}} Verified Account</h4>
          {{else}}
            {{#if isOwnProfile}}
              <h4 class="u-ta-center">{{#link-to 'users.trust' class="u-tc-red"}}{{fa-icon "envelope"}} Please verify your email{{/link-to}}</h4>
            {{/if}}
          {{/if}}

          {{#text-with-icon icon="calendar-o"}}
            Joined {{moment-format user.createdAt 'MMMM YYYY'}}
          {{/text-with-icon}}
          {{#if user.profile.location}}
            {{text-with-icon text=user.profile.location icon='map-marker'}}
          {{/if}}

        </div>
      </section>
    </div>
    <div class="grid__col grid__col--2-of-3">
      <!-- Favourites -->
      {{activity-card
        model=favouritedData
        group="favourite"
        isProfilePage=true
        isOwnProfile=isOwnProfile}}

      <!-- Requests -->
      {{activity-card
        model=model.requests
        group="request"
        isProfilePage=true
        isOwnProfile=isOwnProfile}}

      <!-- Registrations -->
      {{activity-card
        model=model.registrations
        group="registration"
        isProfilePage=true
        isOwnProfile=isOwnProfile}}
    </div>
  </div>
</div>
