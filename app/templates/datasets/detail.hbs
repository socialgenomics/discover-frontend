{{#unless session.isAuthenticated}}
  {{#full-page-notification customClassName='create-account-notification'}}
    <h3>Search through <strong>{{datasetsNumber}}</strong> human genomic datasets</h3>
    {{#link-to 'root' class='btn waves-effect teal white-text'}}Search now{{/link-to}}
  {{/full-page-notification}}
{{/unless}}

<div class="grid-wrapper card t-light">
  <div class="grid__col grid__col--1-of-2 u-border-right">

    <div class="top-action card-header">
      {{#if dataset.colour}}
        {{assay-type assay=dataset}}
      {{/if}}

      <div class="actions-container valign-wrapper">
        {{action-favourite model=dataset}}
        {{action-share
          actionableId=dataset.id
          actionableType='dataset'
          shareUrl=datasetUrl
        }}
      </div>
    </div>

    <div class="card-main-content">
      <div class="dataset-main-info">
        <h2>{{dataset.title}}</h2>
        {{#if dataset.description}}
          <p class="markdown-text">{{markdown-to-html markdown=dataset.description}}</p>
        {{/if}}

        <div class="tags">
          {{#each tags as |tag|}}
            {{tag-item tag=tag}}
          {{/each}}
          {{#if session.isAuthenticated}}
            {{add-tag addTag=(action 'addTag')}}
            <br><span class="u-tc-tertiary fs1">Please add tags to improve searching and browsing through data. <a class="help-button" {{action "toggleTagModal"}}>?</a></span>
          {{/if}}
        </div>

      </div>
    </div>

    <div class="u-border-top">
      <div>
          <ul class="u-ml0 u-pl0 u-mt3">
            {{#if dataset.userId}}
              <li class="u-tc-tertiary">
                Submitted by:
                {{#link-to 'user' dataset.userId.id class="u-tc-primary"}}{{dataset.userId.displayName}}{{/link-to}}
              </li>
            {{else}}
              {{#if dataset.datasourceId.name}}
                <li class="u-tc-tertiary">
                  Sourced from:
                  {{#link-to 'datasources.source' dataset.datasourceId.id class="u-tc-primary"}}
                    {{dataset.datasourceId.name}}
                  {{/link-to}}
                </li>
              {{/if}}
              {{#if dataset.accession}}
                <li class="u-tc-tertiary">
                  Accession ID:
                  <span class="u-tc-primary">{{dataset.externalId}}</span>
                </li>
              {{/if}}
            {{/if}}
            {{#if dataset.access}}
              <li class="u-tc-tertiary">
                Access type:
                {{#link-to 'help.searching-for-data' (query-params help="filters") class="u-tc-primary"}}
                  {{dataset.access}}
                {{/link-to}}
              </li>
            {{/if}}
          </ul>
        </div>

      <div class="u-ta--center">
          {{#if dataset.url}}
            <a
              target="_blank"
              href="{{if session.isAuthenticated dataset.url ''}}"
              class="c-btn c-btn--primary c-btn--shadow"
              {{action "trackExit"}}
            >
              {{#if (eq dataset.access 'Open')}}Access Data{{else}}Go To Dataset{{/if}}
            </a>
          {{else}}
            {{! should have disabled class}}
            <a class="c-btn c-btn--secondary c-btn--shadow">
              {{#if (eq dataset.access 'Open')}}Access Data{{else}}Apply for Access{{/if}}
            </a>
          {{/if}}
        </div>

      {{#unless session.isAuthenticated}}
        {{create-account-call-to-action}}
      {{/unless}}
    </div>
  </div>

  <div class="grid__col grid__col--1-of-2">
    <div class="card-header center-align teal-text">Discussions</div>
    {{partial "datasets/tab-comments"}}
  </div>

</div>



{{#if isShowingTagModal}}
  {{tag-modal action="toggleTagModal"}}
{{/if}}

{{{ model.schema }}}
