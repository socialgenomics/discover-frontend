{{#unless session.isAuthenticated}}
  {{#full-page-notification}}
    <div class="grid-wrapper grid-wrapper-fluid ta-center">
      <div class="grid">
        <div class="grid__col grid__col--2-of-3 grid__col--m-2-of-3 grid__col--am">
          <h3 class="mb3 fw-reg fc-secondary">Search through <strong class="fs4">{{datasetsNumber}}</strong> human genomic datasets</h3>
        </div>
        <div class="grid__col grid__col--1-of-3 grid__col--m-1-of-3 grid__col--am">
          {{#link-to 'root' invokeAction=(action 'trackLinkEvent')}}
            {{rui/r-button variant="primary" size="big" label="Search now"}}
          {{/link-to}}
        </div>
      </div>
    </div>
  {{/full-page-notification}}
{{/unless}}

<div class="grid-wrapper grid-wrapper-stepped">
  <div class="grid grid--no-gutter">
    <div class="grid__col grid__col--3-of-3">
      {{dataset-page
        assaysToDisplay=assaysToDisplay
        attributes=attributes
        contributors=contributors
        model=dataset
        modelName="dataset"
        commentsSorted=commentsSorted
        tags=tags
        editableProperties=datasetEditableProperties
      }}
    </div>
  </div>
</div>

{{{ model.schema }}}
