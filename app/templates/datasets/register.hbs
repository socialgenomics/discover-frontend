<div class="row register-form">
  <div class="col m12">
    <div class="card">
      <h1>Register a dataset</h1>
      <hr class="teal">
      <span class="helper-text">Complete all fields below, you can edit these later.</span>
      <form class="" {{action "addDataset" on="submit"}}>
        {{validated-input
          type="text"
          value=title
          errors=errors.title
          placeholder="Add a title for your dataset."
          action=addDataset
          lbl="Title"
        }}

        {{validated-input
          type="text"
          value=description
          errors=errors.description
          placeholder="A short description of the dataset"
          style="height:150px"
          action=addDataset
          textarea="true"
          lbl="Description"
        }}

        {{validated-input
          type="url"
          value=webURL
          errors=errors.webURL
          placeholder="A link to the dataset if available"
          action=addDataset
          lbl="URL"
        }}

        <div class="input-container">
          <button type="submit" class="btn teal white-text">Register Dataset</button>
        </div>
      </form>
    </div>
  </div>
</div>
