<div class="row center card">
  <h2>Register a dataset</h2>
  <hr class="teal">
  <span class="helper-text">Complete all fields below, you can edit these later.</span>
  <form class="col s8 offset-s2" {{action "addDataset" on="submit"}}>
    <div class="input-container">
      <div class="input-field">
        {{validated-input 
          type="text" 
          value=title 
          errors=errors.title 
          placeholder="Add a title for your dataset."
        }}
      </div>
      <div class="lbl">Title</div>
      <div class="input-helper"></div>
    </div>
    <div class="input-container">
      <div class="input-field">
      {{textarea type="text" value=description errors=errors.description placeholder="A short description of the dataset" style="height:150px"}}
      </div>
      <div class="lbl">Description</div>
      <div class="input-helper">Say something about the dataset.</div>
    </div>
    <div class="input-container">
      <div class="input-field">
        {{validated-input 
          type="text" 
          value=downloadURL 
          errors=errors.downloadURL 
          placeholder="If the dataset is online please add the URL here."
        }}
      </div>
    </div>

    <div class="input-container col m12">
      <button type="submit" class="btn teal white-text">Add Dataset</button>
    </div>

  </form>
</div>
