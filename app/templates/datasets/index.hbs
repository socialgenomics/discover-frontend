<div class="row no-margin">
  <span class="align-left col m3">Results: {{ meta.hits }}</span>
  <div class="assay-key right">
    <span>Assay Key:</span> 
    {{#each assay in assays }}
      {{#link-to 'datasets.assay' assay}}
      <span class=''>{{assay-colour assay}}{{ assay }}</span>  
      {{/link-to}}
    {{/each }}
  </div>
</div>
<div class="row">
{{#each dataset in model }}
  {{render 'datasets/card' dataset=dataset}}
{{/each }}
</div>
