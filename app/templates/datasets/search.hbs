<div class="s12">
  <div class="section" style="padding-top:0;">
    <h6>Your query:</h6>
      <div id="filters">
        <span class="filter first">
          <em class="highlight">"{{model.query}}"</em>
        </span>
        {{#each model.filters as |filter|}}
          {{#if filter.value}}
          <span class="filter" {{action "removeFilter" filter.name filter.value}}>{{ filter.displayName }} : {{filter.value}}<span class="remove">x</span></span>
          {{/if}}
        {{/each}}
      </div>

  </div>
  <div class="section" style="padding-bottom:0;">
    {{#if model.isLoading}}

    {{else}}
      <h6>Search Results ({{ model.meta.total }}):</h6>
    {{/if}}
  </div>
</div>


<div class="row relative">
  <div id="aggregation" class="left-of-container">
  {{#each model.aggs as |agg|}}
    {{#if agg.show}}
    <div class="section">
      <h5>{{ agg.displayName }}</h5>
      {{#each agg.buckets as |bucket|}}
        <div>
        {{#if (eq agg.name "assayType")}}
          <div class="label {{bucket.colour}}"></div>
        {{else}}
          <div class="label"></div>
        {{/if}}
        <span {{action "addFilter" agg.name bucket.key}} style="cursor:pointer;">{{bucket.key}} ({{bucket.doc_count}})</span>
      </div>
      {{/each}}
    </div>
    <div class="divider"></div>
    {{/if}}
  {{/each}}
  </div>
  {{#if model.isLoading}}
    {{partial 'datasets/loading'}}
  {{else}}
    {{#each model.datasets as |dataset|}}
      {{render 'datasets/card' dataset}}
    {{/each}}
  {{/if}}
</div>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal" targetAttachment="center" translucentOverlay=true}}
    <div class="modal-content center-align">
      <img src="/assets/images/icons/work-in-progress.png" alt="Logo" class="social-media-icon"/>
      <h2>We are still working hard.</h2>
      <h5>This feature will be available very soon. Please don't leave us.</h5>
    </div>
    <div class="modal-footer center-align">
      <a {{action "toggleModal"}} class="modal-action modal-close waves-effect">OK</a>
    </div>
  {{/modal-dialog}}
{{/if}}
