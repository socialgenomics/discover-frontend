<div class="content">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <header class="col m12 header-border">
          <div class="padding-top">
            <div class="col m8 offset-m1 landing-title">
              <h1><strong>Welcome on board!</strong></h1>
              <p class="helper-text sub-dark margin-bottom">Please take a minute to answer these optional questions. We want to see if we are making a difference for you.</p>
            </div>
            <div class="col m3">
              <img src="/assets/images/we-are-testing.png" class="responsive-img">
            </div>
          </div>
        </header>
        <main>
          {{typeform-markup name=model.name email=model.cred.email}}
        </main>
        <div class="row margin-top center-align">
          <div class="col m12">
            {{#link-to 'root'}}<button class="btn btn-light-grey btn-no-shadow btn-wider">SKIP</button>{{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
