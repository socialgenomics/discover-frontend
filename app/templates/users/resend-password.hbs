<div class="content">
  <div class="row center-align">
    <div class="col m12">
      <div class="card card-content">
        <header>
          <h2>Reset your password</h2>
        </header>

        <section class="container-login">
          <form {{action "submitForm" on="submit"}}>
          {{#each messages as |message|}}
            <div class="message {{message.type}}">{{message.text}}</div>
          {{/each}}
            {{validated-input
              type="email"
              value=email
              errors=errors.email
              placeholder="Your email"
              submit=(action 'submitForm')
            }}
            <div class="input-container">
              {{#if loading}}
                {{#full-width-button class="disabled"}}Sending link...{{/full-width-button}}
              {{else if isDisabled}}
                {{#full-width-button class="disabled"}}SEND LINK{{/full-width-button}}
              {{else}}
                {{#full-width-button class="teal" type="submit"}}SEND LINK{{/full-width-button}}
              {{/if}}
            </div>
          </form>
        </section>

      </div>
    </div>
  </div>
</div>
