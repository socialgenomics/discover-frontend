<div class="grid-wrapper grid-wrapper-stepped u-ta-center">
  <h1 class="u-fs4 u-tc-secondary">Reset Password</h1>
  <section class="grid">
    <div class="grid__col grid__col--5-of-12 grid__col--m-2-of-3 grid__col--centered">
      <form>
        {{validated-input
          label="Your Email"
          type="email"
          value=email
          errors=errors.email
          placeholder="e.g. christina@stthomashospital.com"
          submit=(action 'submitForm')
        }}
        {{async-button
          class="c-btn c-btn--primary c-btn--shadow u-fs3 u-mb1 u-full-width"
          action=(action 'submitForm')
          default="Get Reset Link"
          pending="Sending link..."
          disableWhen=isInvalid
          reset=true
        }}
      </form>
    </div>
  </section>
</div>
