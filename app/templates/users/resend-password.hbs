<div class="grid-wrapper grid-wrapper-stepped ta-center">
  <h1 class="fs4 fc-secondary">Reset Password</h1>
  <section class="grid">
    <div class="grid__col grid__col--5-of-12 grid__col--m-2-of-3 grid__col--centered">
      <form>
        {{validated-input
          label="Your Email"
          type="email"
          value=email
          errors=validations.messages
          placeholder="e.g. christina@stthomashospital.com"
        }}

        <div class="flex flex-column">
          {{rui/r-async-button
            action=(action 'submitForm')
            default="Get Reset Link"
            disableWhen=isInvalid
            pending="Sending link..."
            reset=true
            size="big"
            variant="primary"
          }}
        </div>
      </form>
    </div>
  </section>
</div>
