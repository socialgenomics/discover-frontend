<div class="container">
  <div class="section row">
    <div class="col m4 offset-m4 s12">
      <form {{action "submitForm" on="submit"}}>
      <h2 class="center-align">Login</h2>
        <div class="row">
          <div class="col m12 center-align">
            <ul class="list-inline">
              <!-- <li><img class="social-media-icon" src="assets/images/icons/social/googleplus.png" alt="google plus logo"></li>
              <li><img class="social-media-icon" src="assets/images/icons/social/linkedin.png" alt="linkedin logo"></li>-->
              <li><a {{ action 'authenticateWithGooglePlus' }}><img class="social-media-icon" src="/assets/images/icons/social/googleplus.png"></a></li>
              <li><a {{ action 'authenticateWithLinkedIn' }}><img class="social-media-icon" src="/assets/images/icons/social/linkedin.png"></a></li>
            </ul>
          </div>
        </div>
        <div class="or-div">
          <span>
            OR
          </span>
        </div>

        {{login-signup-input type="email" value=email errors=errors.email placeholder="Email" email=true}}
        {{login-signup-input type="password" value=password errors=errors.password placeholder="Password" password=true}}

        <div class="input-container">
          {{#full-width-button disabled=buttonDisabled type="submit"}}LOGIN{{/full-width-button}}
        </div>
        {{message-queue}}
      </form>
    </div>
  </div>
</div>
