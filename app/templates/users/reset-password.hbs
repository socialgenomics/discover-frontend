<div class="grid-wrapper grid-wrapper-stepped">
  <section class="grid">

    <div class="grid__col grid__col--3-of-3 u-ta-center">
      <h1 class="u-fs4 u-tc-secondary">Reset Password</h1>
    </div>

    <div class="grid__col grid__col--5-of-12 grid__col--m-2-of-3 grid__col--centered">

      {{#unless passwordChanged}}

        <form>
          {{validated-input
            label="Your New Password"
            class="u-mb3"
            type="password"
            value=password1
            errors=errors.password1
            placeholder="e.g. •••••••••"
            helpText="Minimum 8 characters. Must include an uppercase letter or number."
            submit=(action 'submitForm')
          }}
          {{validated-input
            label="Confirm Password"
            class="u-mb3"
            type="password"
            value=password2
            errors=errors.password2
            placeholder="e.g. •••••••••"
            helpText="Minimum 8 characters. Must include an uppercase letter or number."
            submit=(action 'submitForm')
          }}
          {{async-button
            class="c-btn c-btn--primary c-btn--shadow u-fs3 u-mb1 u-full-width"
            action=(action 'submitForm')
            default="Change Password"
            pending="Saving..."
            disableWhen=isDisabled
            reset=true
          }}
        </form>

      {{else}}

        <h2 class="u-tc-tertiary">Your password has been successfully changed.</h2>
        <img src="/assets/images/liz-happy.png">
        {{#link-to 'users.login' class="c-btn c-btn--primary c-btn--shadow u-fs3"}}Continue to Login{{/link-to}}

      {{/unless}}
    </div>
  </section>
</div>
