<div class="content">
  <div class="row center-align">
    <div class="col m12">
      <div class="card card-content">
        <header>
          {{#unless passwordChanged}}<h1>Reset your password</h1>{{/unless}}
        </header>

        <section class="container-login">
          <form {{action "submitForm" on="submit"}}>
            {{#each messages as |message|}}
              <div class="message {{message.type}}">{{message.text}}</div>
            {{/each}}
            {{#unless passwordChanged}}
              {{validated-input
                type="password"
                lbl="Password"
                value=password1
                errors=errors.password1
                placeholder="Your new password"
                password=true
                formSubmitted=formSubmitted
                icon="password"
              }}
              {{validated-input
                type="password"
                lbl="Verify Password"
                value=password2
                errors=errors.password2
                placeholder="Repeat your password"
                password=true
                formSubmitted=formSubmitted
                icon="password"
              }}
            {{else}}
              <h4 class="teal-text">Your password has been successfully changed.</h4>
            {{/unless}}
            <div class="input-container">
              {{#unless passwordChanged}}
                {{#full-width-button class="teal {{#if buttonDisabled 'disabled'}}" type="submit"}}CONFIRM PASSWORD{{/full-width-button}}
              {{else}}
                {{#link-to 'users.login' class="btn teal"}}CONTINUE TO LOGIN{{/link-to}}
              {{/unless}}
            </div>
            {{message-queue}}
          </form>
        </section>

      </div>
    </div>
  </div>
</div>
