<div class="grid-wrapper grid-wrapper-stepped">
  <div class="grid">
    <div class="grid__col grid__col--3-of-3">
      {{profile-tabs}}
      <div class="c-card u-rounded-bottom u-py3 u-ta-center">
        <div>
          <h1 class="u-fs4 ">Trust & Verification</h1>
          {{#if model.is_verified}}
            <h4 class="u-tc-teal u-fs2">{{fa-icon "check-circle"}} Your account is verified.</h4>
            <div class="c-divider c-divider-light-bg"></div>

            <h4 class="u-fs2 u-mb0">{{fa-icon "envelope"}} {{model.main_credential.email}}</h4>
          {{else}}
            <h4 class="u-tc-red u-fs2">Please verify your email.</h4>
            <div class="c-divider c-divider-light-bg"></div>
            <h4 class="u-fs2 u-tc-secondary">{{fa-icon "envelope"}} {{model.main_credential.email}}</h4>
            {{rui/r-button type="primary" size="big" clickHandler=(route-action "resendVerifyEmail") label="Resend Verification Email"}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
