  <div class="row">
    <div class="col m12">
      <div class="card white no-margin darken-1">
        <div class="card-content center-align">
          <h1>Trust & Verification</h1>
          <hr class="yellow">
          <p class="helper-text">Build your trust by verifying your email</p>
        </div>
        <div class="card-action center-align">
          {{#unless session.authenticatedUser.isEmailValidated}}
            <h4 class="color-fruit-salad-text">{{fa-icon "check-circle"}} Your account is already verified.</h4>
          {{else}}
            <h4 class="color-red-error-text">{{fa-icon "envelope"}} {{session.authenticatedUser.email}}</h4>
            <button class="btn" type="submit" {{action "resendVerifyEmail"}}>Verify</button>
          {{/unless}}
        </div>
      </div>
    </div>
