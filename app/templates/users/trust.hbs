<div class="grid-wrapper">
  <div class="grid">
  {{sub-navigation active="trust"}}
    <div class="grid__col grid__col--3-of-3">
      <div class="card white no-margin darken-1">
        <div class="card-content center-align">
          <h1 class="fs4">Trust & Verification</h1>
          {{#if model.is_verified}}
            <h4 class="u-tc-teal fs2 margin-bottom">{{fa-icon "check-circle"}} Your account is verified.</h4>
            <div class="divider"></div>
            <h4 class="fs2 margin-top">{{fa-icon "envelope"}} {{model.main_credential.email}}</h4>
          {{else}}
            <h4 class="u-tc-red fs2 margin-bottom">Please verify your email.</h4>
            <div class="divider"></div>

            <h4 class="fs2 center-align margin-top">{{fa-icon "envelope"}} {{model.main_credential.email}}</h4>
            <button class="btn btn-light btn-no-shadow" type="submit" {{action "resendVerifyEmail"}}>Resend Verification Email</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>