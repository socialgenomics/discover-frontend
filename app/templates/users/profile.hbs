<div class="grid-wrapper grid-wrapper-stepped">
  <div class="grid">
    <div class="grid__col grid__col--3-of-3">
      {{profile-tabs}}
      <div class="c-card u-rounded-bottom u-p1 u-ta-center">
        <h1 class="u-fs4">Edit Profile</h1>
        <img class="u-w3 u-mb1" src={{session.authenticatedUser.profile.avatar}}>
        <div class="grid__col grid__col--5-of-12 grid__col--m-2-of-3 grid__col--centered">
          <form>
            {{validated-input
              type="text"
              value=firstname
              errors=errors.firstname
              placeholder="First Name"
              submit=(action 'save')
            }}
            {{validated-input
              type="text"
              value=lastname
              errors=errors.lastname
              placeholder="Last Name"
              submit=(action 'save')
            }}
            {{validated-input
              type="text"
              value=affiliation
              errors=errors.affiliation
              placeholder="Affiliation"
              submit=(action 'save')
            }}
            {{async-button
              class="c-btn c-btn--primary c-btn--shadow u-fs3 u-mb1 u-full-width"
              action=(action 'save')
              default="Save Changes"
              pending="Saving..."
              disableWhen=(not isSavable)
              reset=true
            }}
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
