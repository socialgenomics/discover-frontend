<div class="grid-wrapper grid-wrapper-fluid">
  <div class="grid">
    <div class="grid__col grid__col--3-of-3">
      {{profile-tabs}}
      <div class="c-card u-rounded-bottom u-py3 u-px2 u-ta-center">
        <div class="grid">
          <div class="grid__col grid__col--1-of-2 grid__col--m-2-of-3 grid__col--centered">
            <h1 class="u-fs4">Edit Profile</h1>
            <img src={{session.authenticatedUser.profile.avatar}} class="u-w3 u-mb2">
            <form>
              {{validated-input
                label="First Name"
                type="text"
                value=firstname
                errors=errors.firstname
                placeholder="e.g. Christina"
                submit=(action 'save')
              }}
              {{validated-input
                label="Last Name"
                type="text"
                value=lastname
                errors=errors.lastname
                placeholder="e.g. Luckasson"
                submit=(action 'save')
              }}
              {{validated-input
                label="Affiliation"
                type="text"
                value=affiliation
                errors=errors.affiliation
                placeholder="e.g. Bioinformatician at XYZ Institute"
                submit=(action 'save')
              }}

              {{async-button
                class="c-btn c-btn-primary"
                action=(action 'save')
                default="Save Changes"
                pending="Saving..."
                disableWhen=(not isSavable)
                reset=true
              }}
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
