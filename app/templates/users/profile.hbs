{{sub-navigation active="profile"}}
  <div class="row">
    <div class="col m12 center-align">
      <div class="card white no-margin darken-1">
        <div class="card-content">
          <h1>Edit Profile</h1>
          <hr class="yellow">
          <form class="row section">
            <div class="col m12 center">
              <div class="profile-img">
                <img src={{session.authenticatedUser.profile.avatar}}>
              </div>
            </div>
            <div class="input-container col m6 offset-m3">
              <div class="input-field no-margin-top">
                {{input type="text" placeholder="First Name" value=session.authenticatedUser.firstname}}
              </div>
              <div class="lbl">First Name</div>
            </div>
            <div class="input-container col m6 offset-m3">
              <div class="input-field">
                {{input type="text" placeholder="Last Name" value=session.authenticatedUser.lastname}}
              </div>
              <div class="lbl">Last name</div>
            </div>
            <div class="input-container col m6 offset-m3">
              <div class="input-field">
                {{input type="text" placeholder="Affiliation" value=session.authenticatedUser.profile.workOrganisation}}
              </div>
              <div class="lbl">Affiliation</div>
            </div>
            <div class="input-container col m6 offset-m3">
              {{#if saved}}
                <p class="text-valid center-align">Save Successful.</p>
              {{/if}}
              <button type="submit" class="btn teal white-text"  {{action "save" model}}>Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
