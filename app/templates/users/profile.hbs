<div class="grid-wrapper grid-wrapper-fluid">
  <div class="grid">
    <div class="grid__col grid__col--3-of-3">
      {{profile-tabs}}
      <div class="c-card u-rounded-bottom u-py3 u-px2 u-ta-center">
        <div class="grid">
          <div class="grid__col grid__col--1-of-2 grid__col--m-2-of-3 grid__col--centered">
            <h1 class="u-fs4">Edit Profile</h1>
            <img src={{session.authenticatedUser.profile.avatar}} class="u-w3 u-mb2">
            <form>
              {{validated-input
                type="text"
                value=firstname
                errors=errors.firstname
                placeholder="First Name"
                submit=(action 'save')
              }}
              {{validated-input
                type="text"
                value=lastname
                errors=errors.lastname
                placeholder="Last Name"
                submit=(action 'save')
              }}
              {{validated-input
                type="text"
                value=affiliation
                errors=errors.affiliation
                placeholder="Affiliation"
                submit=(action 'save')
              }}
              {{#if isSavable}}
                <button type="submit" class="c-btn c-btn-primary" {{action "save"}}>Save Changes</button>
              {{else}}
                <button type="button" class="c-btn c-btn-disabled">Save Changes</button>
              {{/if}}
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
