<div class="content sub-grey">
  <section class="container-signup no-padding">
   <form {{action "signupAndAuthenticate" on="submit"}} class="margin-top margin-bottom">
     <div class="row">
       <div class="col m12 s12 center-align">
         <ul class="list-inline">
           <li><a {{ action 'thirdPartyAuth' 'google-oauth2' 'signup'}}><img class="social-media-icon btn-floating" src="/assets/images/icons/social/googleplus.png"></a></li>
           <li><a {{ action 'thirdPartyAuth' 'linked-in-oauth2' 'signup'}}><img class="social-media-icon btn-floating" src="/assets/images/icons/social/linkedin.png"></a></li>
         </ul>
       </div>
     </div>
     <div class="or-div">
       <span>
         OR
       </span>
     </div>
     {{validated-input
       type="Text"
       value=fullname
       errors=errors.fullname
       placeholder="Full Name"
       helpText="You can change your name later in the settings."
       formSubmitted=formSubmitted
       class="signup-fullname"
     }}
     {{validated-input
       type="email"
       value=email
       errors=errors.email
       placeholder="Email"
       helpText="You'll need to verify this later."
       formSubmitted=formSubmitted
       class="signup-email"
     }}
     {{validated-input
       type=type
       value=password
       password=true
       errors=errors.password
       placeholder="Password"
       helpText="Must be at least 8 characters and include an uppercase letter or number."
       showPassword=showPassword
       formSubmitted=formSubmitted
       class="signup-password"
     }}
     <div class="password-div no-margin">
       <div class="pw-check left">
         <input type="checkbox" id="showPassword" onClick={{action 'toggleCheckbox'}} >
         <label for="showPassword"><span class="grey-text">Show password</span></label>
       </div>
       <div class="pw-strength right">
         <span class="pw-tag grey-text">Password strength: <span class="{{strength}}">{{strength}}</span></span>
       </div>
     </div>
     <div class="input-container center">
      {{#if loading}}
        {{#full-width-button class="disabled"}}Signing up...{{/full-width-button}}
      {{else if isDisabled}}
        {{#full-width-button class="disabled"}}CREATE YOUR ACCOUNT{{/full-width-button}}
      {{else}}
        {{#full-width-button class="teal" type="submit"}}CREATE YOUR ACCOUNT{{/full-width-button}}
      {{/if}}
       <h6 class="center-align grey-text">By signing up you agree to our {{#link-to 'policies' class="link"}}Terms &amp; Privacy Policy.{{/link-to}} </h6>
     </div>
   </form>
  </section>

  <section class="row stick-to-bottom privacy-msg">
   <div class="col m12 center">
     <div class="divider"></div>
     <h3>We care about your privacy</h3>
     <p class="col m4 padding-sides">We advocate full adherence to patient consent.</p>
     <p class="col m4 padding-sides">We don't sell and share any private data with 3rd party.</p>
     <p class="col m4 padding-sides">We encourage responsible custodianship of genomic data.</p>
   </div>
 </section>

</div>
