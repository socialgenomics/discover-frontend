<div class="section row">
  <div class="col m4 offset-m4 s12">
    <form>
      <div class="row">
        <h2 class="center-align">Sign Up</h2>
        <div class="col m12 center-align">
          <ul class="list-inline">
            <!-- <li><img class="social-media-icon" src="assets/images/icons/social/googleplus.png" alt="google plus logo"></li>
            <li><img class="social-media-icon" src="assets/images/icons/social/linkedin.png" alt="linkedin logo"></li>-->
            <li><a {{ action 'authenticateWithGooglePlus' }}><img class="col s3" src="/assets/images/icons/social/googleplus.png"></a></li>
            <li><a {{ action 'authenticateWithLinkedIn' }}><img class="col s3" src="/assets/images/icons/social/linkedin.png"></a></li>
          </ul>
        </div>
      </div>
      <div class="or-div">
        <span>
          OR
        </span>
      </div>

      {{validated-input type="email" value=email errors=errors.email placeholder="Email" email=true}}
      {{validated-input type="password" value=password errors=errors.password placeholder="Password" password=true}}
      <!-- {{input-email action="emailValidHasChanged" emailChanged="setEmail"}} -->
      <!-- {{input-password action="passwordValidHasChanged" passwordChanged="setPassword"}} -->

      <div class="input-container">
        <a {{action 'submitForm'}} id="continue-btn" class="btn full-width">SIGN UP</a>
        <span class="sub-input">By signing up you agree to our <a href="#">Terms</a> and <a href="#">Privacy Policy</a>.</span>
      </div>
    </form>
  </div>
</div>
