<div class="section row">
  <form class="col s4 offset-s4">
    <h1 class="center-align">Sign Up</h1>
    <div class="row">
      <a href="#"><img class="col s3" src="/assets/images/googleplus.png"></a>
      <a href="#"><img class="col s3" src="/assets/images/linkedin.png"></a>
      <a href="#"><img class="col s3" src="/assets/images/orcid.png"></a>
      <a href="#"><img class="col s3" src="/assets/images/twitter.png"></a>
    </div>
	<p class="center-align">We won't use any of your personal data only your email.</p>
	<div class="divider"></div>
     <p class="center-align">OR</p>
    <div class="row">
      <div class="input-field col s12">
        {{input valueBinding="model.email" id="email" type="email" class="validate"}}
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        {{input valueBinding="model.password" id="password" type="password" class="validate"}}
        <label for="password">Password</label>
      </div>
    </div>
    <div class="center-btn">
      <a class="waves-effect waves-light btn" {{action 'submitForm'}}>Join Us</a>
    </div>
	<p class="info-msg">By signing up, you agree to <a href="#">Terms of Service and Privacy Policy.</a></p>
  </form>
</div>
