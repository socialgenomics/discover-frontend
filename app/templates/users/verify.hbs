<div class="grid-wrapper grid-wrapper-stepped ta-center">
  <section class="grid">
    <div class="grid__col grid__col--3-of-3 flex items-center flex-column">
      {{#if model.verified}}
        <h1 class="fs4 fc-secondary">Your account is now verified.</h1>
        <img src="/assets/images/happy.png" class="mb4 icon-x-large" alt="happy lizard">
        {{#link-to 'user' model.id}}
          {{r-button
            variant="primary"
            size="big"
            label="Visit your Profile"
          }}
        {{/link-to}}

      {{else if timeout_error}}
        <h1 class="fs4 fc-secondary">The verification link has expired.</h1>
        <img src="/assets/images/liz-time-out.png" class="mb4 icon-x-large" alt="Time Out lizard">
        <button class="r-btn r-btn-primary r-btn-large" {{action "resendVerifyEmail"}}>Resend Verification Email</button>

      {{else}}
        {{partial 'loading'}}
      {{/if}}

    </div>
  </section>
</div>
