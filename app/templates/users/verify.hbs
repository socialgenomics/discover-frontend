<div class="grid-wrapper grid-wrapper-stepped ta-center">
  <section class="grid">
    <div class="grid__col grid__col--3-of-3 u-flex u-items-center u-flex-column">
      {{#if isEmailValidated}}
        <h1 class="fs4 fc-secondary">Your account is now verified.</h1>
        <img src="/assets/images/happy.png" class="mb4 u-w5" alt="happy lizard">
        {{#link-to 'user' currentUser.id class="c-btn c-btn-primary fs3"}}Visit your Profile{{/link-to}}
      {{else}}
        <h1 class="fs4 fc-secondary">The verification link has expired.</h1>
        <img src="/assets/images/liz-time-out.png" class="mb4 u-w5" alt="Time Out lizard">
        <button class="c-btn c-btn-primary fs3" {{action "resendVerifyEmail"}}>Resend Verification Email</button>
      {{/if}}
    </div>
  </section>
</div>
