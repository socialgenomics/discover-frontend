{{platform-navbar
  avatar=session.authenticatedUser.profile.avatar
  firstname=session.authenticatedUser.firstname
  username=session.authenticatedUser.username
  userId=session.authenticatedUser.id
  isRootRoute=isRootRoute
}}
<main class="u-pos-relative o-main-wrapper">
  <div class="u-pos-fixed u-full-width u-zindex-flash-message">
    {{#each flashMessages.queue as |flash|}}
      {{ui-message flash=flash}}
    {{/each}}
  </div>
  {{md-modal-container}}
  {{outlet}}
</main>

{{#if isShowingModal}}
  {{unfinished-modal toggleModal=(route-action 'toggleModal')}}
{{/if}}
