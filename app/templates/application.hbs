{{platform-navbar
  avatar=session.authenticatedUser.profile.avatar
  firstname=session.authenticatedUser.firstname
  username=session.authenticatedUser.username
  id=session.authenticatedUser.id
}}
<main class="container">
  {{#each flashMessages.queue as |flash|}}
    {{ui-message flash=flash}}
  {{/each}}
  {{md-modal-container}}
  {{outlet}}
</main>

{{#if isShowingModal}}
  {{unfinished-modal toggleModal=(route-action 'toggleModal')}}
{{/if}}

{{platform-footer}}
