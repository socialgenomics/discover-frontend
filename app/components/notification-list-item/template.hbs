{{#if isAction}}
  {{#if (eq notification.status 'seen')}}
    <span class="c-notification-unread-marker"></span>
  {{/if}}
  <div class="c-notification-img-date-container ta-center mr3">
    {{r-avatar src=notification.properties.action.userId.profile.avatar size="medium"}}
    <p class="fs0 fc-tertiary mb0">{{moment-from-now notification.createdAt}}</p>
  </div>
  <div class="flex-grow c-notification-body">
    <span>{{notification.properties.action.userId.displayName}}</span>
    <span class="fc-tertiary fs0">
      {{#if (eq notification.properties.action.type 'comment') }}
        commented on
      {{else if (eq notification.properties.action.type 'tag')}}
        added a tag to
      {{else if (eq notification.properties.action.type 'share')}}
        shared
      {{else if (eq notification.properties.action.type 'favourite')}}
        favourited
      {{else if (eq notification.properties.action.type 'attribute')}}
        added an attribute to
      {{/if}}
    </span>

    <p class="mb0">
      {{truncate model.title 70}}
    </p>
  </div>
{{/if}}
