{{#if (eq access "Open")}}
  <li class="inline-block pr2 mr2 border-right fc-green cursor-default" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-globe"></i>
    <span class="px2">
      Open
    </span>
  </li>
{{/if}}

{{#if (eq access "Restricted")}}
  <li class="inline-block pr2 mr2 border-right fc-red cursor-default" data-balloon="Access Type" data-balloon-pos="down">
    <i class="fa fa-lock"></i>
    <span class="px2">
      Restricted
    </span>
  </li>
{{/if}}

{{#if (or (eq statType "collection") (eq statType "datasource"))}}
  <li class="inline-block pr2 mr2 border-right cursor-default" data-balloon="Datasets" data-balloon-pos="down">
    {{fa-icon "file-text"}}
    <span class="px2">
      {{#if stats.datasets}}
        {{rough-estimate stats.datasets}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

{{#if (eq statType "collection")}}
  <li class="inline-block pr2 mr2 border-right cursor-default" data-balloon="Sources" data-balloon-pos="down">
    {{fa-icon "database"}}
    <span class="px2">
      {{#if stats.datasources}}
        {{rough-estimate stats.datasources}}
      {{else}}
        0
      {{/if}}
    </span>
  </li>
{{/if}}

<!-- Each of these can be a stats-list-item -->
<li class="inline-block pr2 mr2 cursor-default {{if (eq statType 'datasets')  'border-right'}}" data-balloon="Views" data-balloon-pos="down">
  {{fa-icon "eye"}}
  <span class="px2">
    {{#if stats.view}}
      {{rough-estimate stats.view}}
    {{else}}
      0
    {{/if}}
  </span>
</li>


{{#if (eq statType "datasets")}}
  <li class="inline-block pr2 mr2 border-right cursor-default" data-balloon="Discussion" data-balloon-pos="down">
