<label class="c-validated-input-label u-tc-secondary u-pb1 u-block">Add your research interest</label>
<div>
  {{#if editInterests.length}}
  <div>
    {{#each editInterests as |interest|}}
      <span class="interest-pill u-p1 u-bc-off-white u-mr1 u-mb1 u-rounded u-border u-hv-bc-off-white u-inline-block">
        {{interest}}
        <span class="u-tc-secondary" {{action "removeInterest" interest}}>
          {{fa-icon "fa-times"}}
        </span>
      </span>
    {{/each}}
  </div>
  {{/if}}
  <div class="u-pb1 u-flex">
    {{#if isOpen}}
      {{focus-input class="u-mr2" value=newInterest type="text" enter="addInterest" placeholder="Add your research interest"}}
      <button {{action "hideInput"}} class="c-btn-text-secondary u-py2">Cancel</button>
    {{else}}
      <button {{action "showInput"}} class="c-btn c-btn-secondary u-px2 u-py1">Add Interest</button>
    {{/if}}
  </div>
  <span class="u-tc-secondary">eg. RNA-seq</span>
</div>