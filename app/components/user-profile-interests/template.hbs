<label class="c-validated-input-label fc-secondary mb2 block">Add your research interests</label>
<div class="py3">
  {{#if editInterests.length}}
  <div>
    {{#each editInterests as |interest|}}
      {{tag-item
        type='interest'
        tagText=interest
        userId=userId
        delete=(action 'removeInterest')
      }}
    {{/each}}
  </div>
  {{/if}}
  <div class="py3 flex">
    {{#if isOpen}}
      {{focus-input class="mr2" value=newInterest type="text" enter="addInterest" placeholder="Add your research interest"}}
      <button {{action "hideInput"}} class="c-btn-text-secondary py3">Cancel</button>
    {{else}}
      <button {{action "showInput"}} class="c-btn c-btn-secondary px3 py2">Add Interest</button>
    {{/if}}
  </div>
  <span class="fc-secondary">eg. RNA-seq</span>
</div>
