<label class="c-validated-input-label fc-secondary mb2 block">Your research interests</label>
<div class="py3">
  {{#if editInterests.length}}
  <div>
    {{#each editInterests as |interest|}}
      {{tag-item
        type='interest'
        tagText=interest
        userId=userId
        delete=(action 'removeInterest')
      }}
    {{/each}}
  </div>
  {{/if}}
    <div class="py2">
      {{#power-select
        placeholder="Type or select your interests"
        options=suggestedInterests
        onchange=(action "addInterest")
        onkeydown=(action "handleKeydown")
        noMatchesMessage="No suggestions found. Press enter to add."
        defaultHighlighted=''
        as |interest|
      }}
        {{interest}}
      {{/power-select}}
    </div>
</div>
