{{#each userAttributes as |attribute|}}
  {{validated-input
    label=attribute.label
    value=(mut (get this attribute.key))
    submit=(action 'save')
    errors=(v-get this attribute.key 'messages')
    type=(if attribute.multiline 'textarea' 'text')
    noMarkdown=true
  }}
{{/each}}

{{async-button
  class="c-btn c-btn-primary"
  action=(action 'save')
  default="Save Changes"
  pending="Saving..."
  disableWhen=(not isSavable)
  reset=true
}}
