{{#if sendSuccess}}
  <h2 class="success-message">Success! <br> Your email has been sent.</h2>
{{else if sendError}}
  <h2 class="success-message">Oops, something didnâ€™t work! <br> Your email has not been sent.</h2>
{{else}}
  {{validated-input
    label="Email"
    type="text"
    value=emailAddress
    errors=errors.emailAddress
    placeholder="Who do you want to send this to?"
  }}
  {{validated-input
    label="Message"
    type='textarea'
    value=customMessage
    placeholder='Include a personal message with this dataset.'
    noMarkdown= true
  }}
{{/if}}
<button
  type="submit"
  class="btn waves-effect {{unless submitDisabled 'teal white-text'}}"
  disabled={{submitDisabled}}
>
  {{submitButtonLabel}}
</button>
