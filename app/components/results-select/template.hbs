<label class="mr2 fc-secondary" for="results">Results per page: </label>

{{#basic-dropdown verticalPosition=below horizontalPosition="left" as |dropdown|}}
  {{#dropdown.trigger class="c-select-trigger outline-none px3"}}
    {{resultsPerPage}}
    <span class="c-select-icon"></span>
  {{/dropdown.trigger}}

  {{#dropdown.content}}
    <ul class="c-select-dropdown c-select-options">
      {{#each resultsOptions as |option|}}
        <li class="c-select-option" {{action 'setResultsPerPage' dropdown option}}>
          {{option}}
        </li>
      {{/each}}
    </ul>
  {{/dropdown.content}}

{{/basic-dropdown}}
