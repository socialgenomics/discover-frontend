{{#link-to 'datasources.source' source.id classNames="feed-item-component"}}
  <div class="c-card mb4 c-col-li-item u-hv-bc-white">
    <section class="grid__col grid__col--1-of-5 grid__col--am px4 py2 bc-light-bluegrey ta-center u-inherit-height">
      <div class="u-inherit-height flex flex-column items-center justify-center">
        {{fa-icon "database" size=2 class='fc-tertiary p2'}}
        <p class="mb0">Data Source</p>
      </div>
    </section>

    <section class="grid__col grid__col--1-of-5 grid__col--am ta-center px3 py2 u-inherit-height">
      <div class="u-inherit-height flex flex-column items-center justify-center">
        {{#if source.properties.logo}}
          <img class="c-img--src-logo" src={{source.properties.logo}}>
        {{/if}}
        <p class="fs0 mb0 pt2 fw-bold">{{source-name-fallback model=source}}</p>
      </div>
    </section>

    <section class="grid__col grid__col--3-of-5 grid__col--am px3 u-inherit-height c-col-li-item__divider c-col-li-item__resp-text">
      <div class="u-inherit-height flex items-center">
        {{collection-summary-fallback class=""
          summary=source.properties.summary
          description=source.description
        }}
      </div>
    </section>

  </div>
{{/link-to}}
