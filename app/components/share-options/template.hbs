<div class="py3">
  {{fa-icon 'twitter' size=2 class='fc-twitter px4 py3 border-right cursor-pointer' click=(action 'share' 'twitter')}}
  {{fa-icon 'linkedin' size=2 class='fc-linkedin px4 py3 border-right cursor-pointer' click=(action 'share' 'linkedin')}}
  {{fa-icon 'envelope' size=2 class='fc-yellow px4 py3 cursor-pointer' click=(action 'onEnvelopeClick')}}
</div>

<div class="u-flex pl3 pb3">
  <p class="p2 border m3 mb0 u-overflow-hidden c-share-modal__copy-link">{{shareUrl}}</p>
  {{#copy-button
    class=copyButtonClasses
    clipboardText=shareUrl
    success='copySuccess'
    error='copyError'
  }}
    {{#if copyAttempt}}
      {{#if copySuccess}}
        {{fa-icon 'check'}} Copied
      {{else}}
        {{fa-icon 'exclamation-triangle'}} Failed
      {{/if}}
    {{else}}
      Copy
    {{/if}}
  {{/copy-button}}
</div>
