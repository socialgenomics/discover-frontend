{{#if (eq type 'tag')}}
  {{#link-to 'datasets.search' (query-params query=tagQuery) class="fc-secondary text-line-keep"}}
    {{tagText}}
  {{/link-to}}
{{else}}
  <span class="fc-secondary text-line-keep">{{tagText}}</span>
{{/if}}
{{#if isRemovable}}
  <span {{action 'delete'}} class="t-tag-item-delete u-hv-tc-red cursor-pointer fc-tertiary p2">{{fa-icon "fa-times"}}</span>
{{/if}}
