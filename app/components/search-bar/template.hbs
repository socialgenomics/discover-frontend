<form class="flex items-center bc-white" autocomplete="off">

    <label class="flex items-center">
      <span>{{fa-icon "search" class='px3 fc-secondary'}}</span>
    </label>

    {{!#each predicates as |predicate|}}
      {{!tag-item
          tag=predicate
          tagText=(compute (action 'getPredicateText') predicate)
          type='predicate'
          deleteAction=(action 'removePredicate')}}
    {{!/each}}

    {{#power-select-typeahead
      placeholder=placeholder
      options=suggestions
      selected=queryString
      onchange=(action 'handleSelection')
      onkeydown=(action 'handleKeyDown')
      search=(perform fetchSuggestions)
      searchMessage=''
      defaultHighlighted=''
      as |option|
    }}
      {{option.suggestionText}}
    {{/power-select-typeahead}}


  {{#if hasSubmitButton}}
    <button class="r-btn r-btn-primary r-btn-large square self-stretch">Search</button>
  {{/if}}
</form>
