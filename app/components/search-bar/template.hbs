<form class="flex items-center bc-white" autocomplete="off">

  <label class="flex items-center">
    <span>{{fa-icon "search" class='px3 fc-secondary' size=1}}</span>
  </label>

  {{#power-select-typeahead
    placeholder=placeholder
    options=suggestions
    selected=queryString
    onopen=(action 'handleOpen')
    onblur=(action 'handleBlur')
    onchange=(action 'handleSelection')
    onkeydown=(action 'handleKeyDown')
    search=(perform fetchSuggestions)
    defaultHighlighted=''
    dropdownClass='c-search-bar-dropdown'
    noMatchesMessage=''
    verticalPosition='below'
    as |option|
  }}
    {{option.suggestionText}}
  {{/power-select-typeahead}}

  {{#if fetchSuggestions.isRunning}}
    <span>{{fa-icon "circle-o-notch" class='px3 fc-secondary' pulse=true size=1}}</span>
  {{/if}}

  {{#if hasSubmitButton}}
    <button {{action 'search'}} class="r-btn r-btn-primary r-btn-large square self-stretch">Search</button>
  {{/if}}
</form>
